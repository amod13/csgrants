@model GrantApp.Models.SubProgramMaster

@{
    ViewBag.Title = "ViewDeatils";
    Layout = "~/Areas/VDCMUNLevel/Views/Shared/_VDCMUNLayout.cshtml";
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Details </li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">Details</h1>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">

                        <h4>
                            कार्यलयको नाम:
                            @GrantApp.Areas.Admin.FunctionClass.GetOfficeNameByOfficeId(Model.OfficeId)
                        </h4>

                    </div>

                    <div class="card-body">
                        <div class="row">

                            <div class="col-lg-4 col-md-3 form-group"><b>अनुदानको प्रकार:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@GrantApp.Areas.Admin.FunctionClass.GetGrantTypeNameById(Model.GrantTypeId)</div>


                            <div class="col-lg-4 col-md-3 form-group"><b>आधार/क्षेत्र:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@CommontUtilities.GetProgramNameById(Model.ProgramId)</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>आयोजना/कार्यक्रमको नाम:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.SubProgramTitle</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>कूल लागत:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.TotalBudget</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>लाभान्वित सम्भाब्य जनसंख्या:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.ProbableBenefitedPopulation</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>अवधि (वर्ष):</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.TimeDurationYear</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>प्रदेश वा स्थानिय तहले व्यहोर्ने रकम:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.AmountProvinceVdc</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>सहकारी तथा अन्य गैर सरकारीले व्यहोर्ने रकम:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.NGOINGOAmount</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>नेपाल सरकारले व्यहोर्ने रकम:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.GovnNepalAmount</div>


                            <div class="col-lg-4 col-md-3 form-group"><b>प्रदेश वा स्थानीय तहको पूर्वाधार निर्माणसंग सम्बन्धित रहेको:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Html.CheckBoxFor(m => m.ObjSupportingDocumentsModel.InfrastrucutreRelatedToProvinces)</div>

                            <div class="col-lg-4 col-md-3 form-group"><b>जनताको आयस्तर तथा गरिबी निवारणमा योगदान पुर्याउने:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Html.CheckBoxFor(m => m.ObjSupportingDocumentsModel.PovertyAlleviationAnLivingStandard)</div>

                            <div class="col-lg-4 col-md-3 form-group"><b>स्थानीय सीप, स्रोत र साधनको उपयोग हुने :</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Html.CheckBoxFor(m => m.ObjSupportingDocumentsModel.ResourceSkillAndSourceUsed)</div>

                            <div class="col-lg-4 col-md-3 form-group"><b>कम्तिमा ५० प्रतिशत रकम विनियोजन गरेको :</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Html.CheckBoxFor(m => m.ObjSupportingDocumentsModel.Minimum50PercentageAppropriation)</div>

                            <div class="col-lg-4 col-md-3 form-group"><b>नेपाल सरकारको प्राथमिकतामा परेको :</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Html.CheckBoxFor(m => m.ObjSupportingDocumentsModel.TopPriorityInGovernment)</div>

                            <div class="col-lg-4 col-md-3 form-group"><b>नेपाल सरकारको नीति तथा कार्यक्रममा परेको :</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Html.CheckBoxFor(m => m.ObjSupportingDocumentsModel.InGovernmentPolicyAndProgram)</div>

                        </div>
                        <div class="row">


                            <div class="col-lg-4 col-md-3 form-group"><b>अपलोड गरीएका फाईलहरू:</b></div>
                            <div class="col-lg-8 col-md-9 form-group"></div>

                        </div>
                        <div class="row">

                            <div class="col-lg-4 col-md-3 form-group"><b>आयोजना कार्यान्वयन गर्नुपर्ने आवस्यकता र पुष्टायाई भएको:</b></div>
                            <div class="col-lg-4 col-md-9 form-group">@Model.ObjSupportingDocumentsModel.NecessityForProgram</div>
                            @if (Model.ObjSupportingDocumentsModel.NecessityForProgram != "")
                            {
                                <div class="col-lg-4 col-md-9 form-group">@Html.ActionLink("Download", "Download", "GrantRequestForm", new { @FileName = Model.ObjSupportingDocumentsModel.NecessityForProgram }, null)</div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 form-group"><b>आयोजना कार्यक्रम कार्यान्वयनका लागि भौतिक क्षमता तथा जनशक्ति उपलब्धता रहेको:</b></div>
                            <div class="col-lg-4 col-md-9 form-group">@Model.ObjSupportingDocumentsModel.PhysicalAndManPower</div>
                            @if (Model.ObjSupportingDocumentsModel.PhysicalAndManPower != "")
                            {
                                <div class="col-lg-4 col-md-9 form-group">@Html.ActionLink("Download", "Download", "GrantRequestForm", new { @FileName = Model.ObjSupportingDocumentsModel.PhysicalAndManPower }, null)</div>
                            }
                        </div>
                        <div class="row">



                            <div class="col-lg-4 col-md-3 form-group"><b>वार्षिक कार्यक्रम तथा बजेटमा परेको:</b></div>
                            <div class="col-lg-4 col-md-9 form-group">@Model.ObjSupportingDocumentsModel.YearlyProgramAndBudget</div>
                            @if (Model.ObjSupportingDocumentsModel.YearlyProgramAndBudget != "")
                            {
                                <div class="col-lg-4 col-md-9 form-group">@Html.ActionLink("Download", "Download", "GrantRequestForm", new { @FileName = Model.ObjSupportingDocumentsModel.YearlyProgramAndBudget }, null)</div>
                            }

                        </div>
                        <div class="row">

                            <div class="col-lg-4 col-md-3 form-group"><b>संभाव्यता अध्यन:</b></div>
                            <div class="col-lg-4 col-md-9 form-group">@Model.ObjSupportingDocumentsModel.FeasibilitiesStudyFile</div>
                            @if (Model.ObjSupportingDocumentsModel.FeasibilitiesStudyFile != "")
                            {


                                <div class="col-lg-4 col-md-9 form-group">@Html.ActionLink("Download", "Download", "GrantRequestForm", new { @FileName = Model.ObjSupportingDocumentsModel.FeasibilitiesStudyFile }, null)</div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 form-group"><b>ड्रइङ, डिजाइन,स्पेसिफिकेशन:</b></div>
                            <div class="col-lg-4 col-md-9 form-group">@Model.ObjSupportingDocumentsModel.SDSDocFile</div>
                            @if (Model.ObjSupportingDocumentsModel.SDSDocFile != "")
                            {
                                <div class="col-lg-4 col-md-9 form-group">@Html.ActionLink("Download", "Download", "GrantRequestForm", new { @FileName = Model.ObjSupportingDocumentsModel.SDSDocFile }, null)</div>
                            }

                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 form-group"><b>निर्णयको प्रतिलिपि:</b></div>
                            <div class="col-lg-4 col-md-9 form-group">@Model.ObjSupportingDocumentsModel.DecisionDocFile</div>
                            @if (Model.ObjSupportingDocumentsModel.DecisionDocFile != "")
                            {
                                <div class="col-lg-4 col-md-9 form-group">@Html.ActionLink("Download", "Download", "GrantRequestForm", new { @FileName = Model.ObjSupportingDocumentsModel.DecisionDocFile }, null)</div>
                            }

                        </div>
                        <div class="row">

                            <div class="col-lg-4 col-md-3 form-group"><b>वातावरणीय प्रभाव मूल्याङ्कन प्रतिवेदन:</b></div>
                            <div class="col-lg-4 col-md-9 form-group">@Model.ObjSupportingDocumentsModel.EnvironmentDocFile</div>
                            @if (Model.ObjSupportingDocumentsModel.EnvironmentDocFile != "")
                            {
                                <div class="col-lg-4 col-md-9 form-group">@Html.ActionLink("Download", "Download", "GrantRequestForm", new { @FileName = Model.ObjSupportingDocumentsModel.EnvironmentDocFile }, null)</div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 form-group"><b>अन्य विवरण कागजातहरू:</b></div>
                            <div class="col-lg-4 col-md-9 form-group">@Model.ObjSupportingDocumentsModel.ExtraDocFile</div>
                            @if (Model.ObjSupportingDocumentsModel.ExtraDocFile != "")
                            {
                                <div class="col-lg-4 col-md-9 form-group">@Html.ActionLink("Download", "Download", "GrantRequestForm", new { @FileName = Model.ObjSupportingDocumentsModel.ExtraDocFile }, null)</div>
                            }


                            <div class="clearfix"></div>

                        </div>



                        @using (Html.BeginForm("SavePoints", "GrantRequestForm", FormMethod.Post, new { id = "frmCommonForm", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.SubProgramId)

                            <div class="row">
                                @for (int i = 0; i < Model.PopulatePointsVariableListViewModelList.Count; i++)
                                {

                                    @Html.HiddenFor(m => m.PopulatePointsVariableListViewModelList[i].PointsVariableSetupId)
                                    <div class="col-lg-4 col-md-3 col-sm-6 form-group">
                                        <label>शिर्षक</label>
                                        <br />
                                        @Model.PopulatePointsVariableListViewModelList[i].VariableName
                                    </div>
                                    <div class="col-lg-4 col-md-3 col-sm-6 form-group">
                                        <label>नम्बर</label>
                                        @Html.TextBoxFor(model => model.PopulatePointsVariableListViewModelList[i].PointsObtain, new { @class = "form-control form-control-sm" })
                                    </div>
                                    <div class="col-lg-4 col-md-3 col-sm-6 form-group">

                                    </div>
                                    <div class="clearfix"></div>

                                }
                            </div>

                            <div class="form-group">
                                <div class="text-right">
                                    <input type="submit" value="पेश गर्नुहोस्" class="btn btn-primary" id="btnSave" name="btnSave" />
                                    @Html.ActionLink("रद्द गर्नुहोस्", "Index", "GrantRequestForm", null, new { @class = "btn btn-danger" })
                                </div>
                            </div>




                        }

                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
