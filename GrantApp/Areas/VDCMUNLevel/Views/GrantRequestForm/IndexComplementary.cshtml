@model GrantApp.Models.SubProgramMaster

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/VDCMUNLevel/Views/Shared/_VDCMUNLayout.cshtml";
    int i = 1;
}


<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">अनुदान -कार्यक्रम</li>
        </ul>
    </div>
</div>
<section>
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            @*<h1 class="h3 display">@GrantApp.Areas.Admin.FunctionClass.GetGrantTypeNameById(Model.ViewbagGrantTypeId)</h1>*@

            <h1 class="h3 display">समपूरक अनुदान</h1>

        </header>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">

                        @*<a href="@Url.Action("Action", "Controller")" class="btn btn-warning">
                            अनुदान प्रकिया
                            <i class="fa fa-sliders" aria-hidden="true"></i>
                        </a>*@


                    </div>
                    <div class="card-body">
                        <div class="table-responsive m_table">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>क्रम</th>
                                        <th>अनुदान प्रकार</th>
                                        <th>शिर्षक</th>
                                        <th>लाभान्वित सम्भाब्य जनसंख्या</th>
                                        <th>कुल लागत</th>
                                        <th>अवधि (वर्ष)</th>
                                        <th>प्रदेश</th>
                                        <th>कार्यलय</th>

                                        @*<th>अवस्था</th>*@
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.SubProgramListModelForAdminList)
                                    {

                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@item.GrantTypeName</td>
                                            <td>@item.SubProgramTitle</td>
                                            <td>@item.ProbableBenefitedPopulation</td>
                                            <td>@item.TotalBudget</td>
                                            <td>@item.TimeDurationYear</td>
                                            <td>@item.ProvinceTitleNep</td>
                                            <td>@item.OfficeName</td>
                                            @*<td>@item.Status</td>*@
                                            <td>

                                                @Html.ActionLink(" ", "ViewDeatils", new { @id = item.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = "edits fa fa-eye" })
                                                @*<a href="#" class="edits" title="Edit"><i class="fa fa-edit"></i></a>
                                                    <a href="#" class="views" title="View"><i class="fa fa-eye"></i></a>
                                                    <a href="#" class="deletes" title="Delete"><i class="fa fa-trash"></i></a>*@
                                            </td>
                                            <td>
                                                @Html.ActionLink(" ", "ProposalValuation", new { @id = item.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = "edits fa fa-cog" })


                                            </td>

                                        </tr>
                                        ++i;
                                    }





                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>






