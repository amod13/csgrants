@model GrantApp.Models.SubProgramMaster

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/VDCMUNLevel/Views/Shared/_VDCMUNLayout.cshtml";

    string CName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    string AName = HttpContext.Current.Request.RequestContext.RouteData.Values["Action"].ToString();
    string DefaultClass1 = "btn btn-info btn-sm";
    string DefaultClass2 = "btn btn-info btn-sm";
    string DefaultClass3 = "btn btn-info btn-sm";
    string DefaultClass4 = "btn btn-info btn-sm";
    string DefaultClass5 = "btn btn-info btn-sm";
    string DefaultClass6 = "btn btn-info btn-sm";
    string DefaultClass7 = "btn btn-info btn-sm";
    string DefaultClass8 = "btn btn-info btn-sm";


    if (CName == "SubProgramSetup" && AName == "Edit")
    {
        DefaultClass1 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "CheckListAction")
    {
        DefaultClass2 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "CheckListActionUpload")
    {
        DefaultClass4 = "btn btn-danger btn-sm";
    }
    if (CName == "GrantRequestForm" && AName == "ProposalValuation")
    {
        DefaultClass3 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "ViewDetails")
    {
        DefaultClass5 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "FifteenYojana")
    {
        DefaultClass6 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "ProgramPriority")
    {
        DefaultClass7 = "btn btn-danger btn-sm";
    }

    if (CName == "SubProgramSetup" && AName == "ReqDocUploads")
    {
        DefaultClass8 = "btn btn-danger btn-sm";
    }

}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Program</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            @*<h1 class="h3 display">@GrantApp.Areas.Admin.FunctionClass.GetGrantTypeNameById(Model.ViewbagGrantTypeId)</h1>*@
        </header>
        <div class="row">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    @Html.ActionLink("१. मुख्य विवरण", "Edit", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass1 })
                    @Html.ActionLink("२. प्रमाणित फाराम", "Edit", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass1 })

                    @Html.ActionLink("३. अनिवार्य कागजातहरू", "ReqDocUploads", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass8 })
                    @*@Html.ActionLink("४. शर्त घोषणा पृष्ठ", "CheckListAction", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass2 })*@
                    @*@Html.ActionLink("५. शर्त घोषणा कागजात", "CheckListActionUpload", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass4 })*@
                    @Html.ActionLink("६. थप विवरण", "ProposalValuation", "GrantRequestForm", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass3 })
                    @*@Html.ActionLink("७. राष्ट्रिय उदेश्यसँग सामञ्जस्यता", "FifteenYojana", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass6 })*@
                    @*@Html.ActionLink("७. प्राथमिकता क्रम", "ProgramPriority", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass7 })*@
                    @Html.ActionLink("८. समिक्षा", "ViewDetails", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass5 })

                </div>
                <div class="clearfix"></div>
                <hr />
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h3 display">@GrantApp.Areas.Admin.FunctionClass.GetGrantTypeNameById(Model.ViewbagGrantTypeId)</h3>
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <span style="background-color:#eadfdf;">@ViewBag.ErrorMessage</span>
                        }
                    </div>
                    <div class="card-body">


                        @using (Html.BeginForm("Edit", "SubProgramSetup", FormMethod.Post,
new { enctype = "multipart/form-data", @id = "GrantFormEdit" }))
                        {
                            @Html.HiddenFor(m => m.ViewbagGrantTypeId)
                            @Html.HiddenFor(m => m.SubProgramId)
                            @Html.HiddenFor(m => m.ViewBagCurrentOfficeType)
                            @Html.HiddenFor(m => m.ViewBagCurrentLoginUserUserTypeId)

                            @Html.HiddenFor(m => m.ObjSupportingDocumentsModel.NecessityForProgram)
                            @Html.HiddenFor(m => m.ObjSupportingDocumentsModel.PhysicalAndManPower)
                            @Html.HiddenFor(m => m.ObjSupportingDocumentsModel.YearlyProgramAndBudget)
                            @Html.HiddenFor(m => m.ObjSupportingDocumentsModel.FeasibilitiesStudyFile)
                            @Html.HiddenFor(m => m.ObjSupportingDocumentsModel.SDSDocFile)
                            @Html.HiddenFor(m => m.ObjSupportingDocumentsModel.DecisionDocFile)
                            @Html.HiddenFor(m => m.ObjSupportingDocumentsModel.EnvironmentDocFile)
                            @Html.HiddenFor(m => m.ObjSupportingDocumentsModel.ExtraDocFile)

                            @Html.HiddenFor(m => m.FinalDocumentsUrl)
                            @Html.HiddenFor(m => m.Status)



                            @Html.ValidationSummary(true)
                        <fieldset>
                            @if (Model.ViewbagGrantTypeId == 1)
                            {
                                @Html.Partial("_CreateEditSpecial")

                            }
                            else
                            {
                                @Html.Partial("_CreateEdit")

                            }


                            @if (Model.Status == 1 || Model.Status == 2)
                            {
                                if (Model.ViewbagGrantTypeId == 2)
                                {
                                    <div class="form-group">
                                        <span style="font-weight:bold;font-size:10px;color:#ff6a00;">(कार्यविधि अनुसार, प्रदेश वा स्थानिय तहले व्यहोर्ने रकम कुल लागत रकमको कम्तिमा ५०% रकम हुनुपर्दछ  ।)</span>
                                    </div>
                                }

                                if (Model.PhaseStatus == 6)
                                {
                                    <div class="form-group">

                                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-floppy-o">&nbsp;</i>सच्चाउनुहोस</button>
                                        @Html.ActionLink(" मुख्य सुचिमा जानुहोस", "ListSubProgram", "SubProgramSetup", new { @id = Model.ViewbagGrantTypeId }, new { @class = "btn btn-info btn-sm fa fa-home" })

                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">

                                        @Html.ActionLink(" मुख्य सुचिमा जानुहोस", "ListSubProgram", "SubProgramSetup", new { @id = Model.ViewbagGrantTypeId }, new { @class = "btn btn-info btn-sm fa fa-home" })

                                    </div>
                                }



                            }
                            else

                            {


                                <div class="form-group">
                                    <button type="button" class="btn btn-success btn-sm"><i class="fa fa-floppy-o">&nbsp;</i>प्रमाणिकरणको प्रकियामा छ ।</button>
                                    @Html.ActionLink(" मुख्य सुचिमा जानुहोस", "ListSubProgram", "SubProgramSetup", new { @id = Model.ViewbagGrantTypeId }, new { @class = "btn btn-info btn-sm fa fa-home" })
                                </div>
                            }


                        </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<script type="text/javascript">
    function validateFormEdit() {

        var OfficeType=@Model.ViewBagCurrentOfficeType;
        var ProvincesType=@Model.ViewBagCurrentLoginUserUserTypeId;
        var GrantTypeId = @Model.ViewbagGrantTypeId;
        var cnv = $('#TotalBudget').val();
        cnv = cnv * 100000;


        if(GrantTypeId==1)
        {
            if(ProvincesType==2)
            {
                if (cnv<100000000) {//10 KRORE
                    alert('कुल लागत कम्तिमा १० करोड वा सो भन्दा धेरै हुनु पर्दछ ।');
                    return false;
                } else { return true; }
            }

            else
            {
                if (OfficeType == 1)//Gapanapa
                {
                    if (cnv > 50000000 || cnv < 5000000) {
                        alert('कुल लागत कम्तिमा ५० लाख र बढीमा ५ करोड सम्म हुनु पर्दछ ।');
                        return false;
                    } else { return true; }
                }
                else if (OfficeType == 4) {
                    if (cnv > 100000000 || cnv < 5000000) {
                        alert('कुल लागत कम्तिमा ५० लाख र बढीमा १० करोड सम्म हुनु पर्दछ ।');
                        return false;
                    } else { return true; }

                }
                else//mahanagarpalika and upmahanagarpalika
                {
                    if (cnv > 150000000 || cnv < 5000000) {
                        alert('कुल लागत कम्तिमा ५० लाख र बढीमा १५ करोड सम्म हुनु पर्दछ !');
                        return false;
                    } else { return true; }
                }


            }
        }
        else
        {
            if(ProvincesType==2)
            {
                if (cnv>1000000000 || cnv<200000000) {
                    alert('कुल लागत २० करोड देखि १ अर्ब सम्म हुनु पर्दछ ।');
                    return false;
                } else { return true; }
            }
            else
            {

                if(OfficeType==1)
                {
                    if (cnv>100000000 || cnv<10000000) {
                        alert('कुल लागत १ करोड देखि १० करोड सम्मको हुनु पर्दछ ।');
                        return false;
                    } else { return true; }
                }
                else if (OfficeType == 4) {
                    if (cnv > 100000000 || cnv < 10000000) {
                        alert('कुल लागत १ करोड देखि १० करोड सम्मको हुनु पर्दछ ।');
                        return false;
                    } else { return true; }
                }
                else
                {
                    if (cnv>250000000 || cnv<50000000) {
                        alert('कुल लागत ५ करोड देखि २५ करोड सम्मको हुनु पर्दछ  !');
                        return false;
                    } else { return true; }
                }
            }

        }



    }

    $('#GrantFormEdit').submit(validateFormEdit);
    //$('#TotalBudget').bind('blur keyup', validate);
</script>