@model GrantApp.Models.SubProgramMaster

@{
    ViewBag.Title = "ViewDetails";
    Layout = "~/Areas/VDCMUNLevel/Views/Shared/_VDCMUNLayout.cshtml";
    int sn = 1;

    int UserTypeId = CommontUtilities.GetCurrentLoginUserUserTypeByOfficeId(Model.OfficeId);

    string CName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    string AName = HttpContext.Current.Request.RequestContext.RouteData.Values["Action"].ToString();
    string DefaultClass1 = "btn btn-info btn-sm";
    string DefaultClass2 = "btn btn-info btn-sm";
    string DefaultClass3 = "btn btn-info btn-sm";
    string DefaultClass4 = "btn btn-info btn-sm";
    string DefaultClass5 = "btn btn-info btn-sm";
    string DefaultClass6 = "btn btn-info btn-sm";
    string DefaultClass7 = "btn btn-info btn-sm";
    string DefaultClass8 = "btn btn-info btn-sm";

    string VdcProvinceNme = CommontUtilities.GetVDCMUNNameByOfficeIdForLocalLevel(Model.OfficeId);
    

    if (CName == "SubProgramSetup" && AName == "ProgramPriority")
    {
        DefaultClass7 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "Edit")
    {
        DefaultClass1 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "CheckListAction")
    {
        DefaultClass2 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "CheckListActionUpload")
    {
        DefaultClass4 = "btn btn-danger btn-sm";
    }
    if (CName == "GrantRequestForm" && AName == "ProposalValuation")
    {
        DefaultClass3 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "ViewDetails")
    {
        DefaultClass5 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "FifteenYojana")
    {
        DefaultClass6 = "btn btn-danger btn-sm";
    }
    if (CName == "SubProgramSetup" && AName == "ReqDocUploads")
    {
        DefaultClass8 = "btn btn-danger btn-sm";
    }
}
@*<link href="~/Content/toastr.min.css" rel="stylesheet" />*@
<link href="~/Content/toastr.min.css" rel="stylesheet" />
<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">शर्त घोषणा कागजात</li>
        </ul>
    </div>
</div>
<style>
    .btn-toolbar {
        display: inline !important;
    }
</style>



<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            @*<h1 class="h3 display">शर्त घोषणा कागजात</h1>*@
        </header>

        <div class="row">
            <div class="col-lg-12">
                @if (ViewBag.Mode == "Edit")
                {
                <div class="btn-toolbar">
                    @Html.ActionLink("१. मुख्य विवरण", "Edit", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass1 })
                    @Html.ActionLink("२. अनिवार्य कागजातहरू", "ReqDocUploads", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass8 })
                    @Html.ActionLink("३. शर्त घोषणा पृष्ठ", "CheckListAction", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass2 })
                    @Html.ActionLink("४. शर्त घोषणा कागजात", "CheckListActionUpload", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass4 })
                    @Html.ActionLink("५. थप विवरण", "ProposalValuation", "GrantRequestForm", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass3 })
                    @Html.ActionLink("६. राष्ट्रिय उदेश्यसँग सामञ्जस्यता", "FifteenYojana", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass6 })
                    @Html.ActionLink("७. प्राथमिकता क्रम", "ProgramPriority", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass7 })
                    @Html.ActionLink("८. समिक्षा", "ViewDetails", "SubProgramSetup", new { @id = Model.SubProgramId, @id1 = Model.ViewbagGrantTypeId }, new { @class = DefaultClass5 })

                </div>
                }

                <div class="clearfix"></div>
                <hr />

                <input type="button" value="Print Form" onclick="callPrint()" class="btn btn-info btn-sm" />
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h3 class="h3 display">शर्त घोषणा कागजात</h3>
                        @*<h4>विवरण</h4>*@
                    </div>

                    <div class="card-body">

                        @using (Html.BeginForm("CheckListActionUpload", "SubProgramSetup", FormMethod.Post,
new { enctype = "multipart/form-data", @id = "CheckListUploadDiv" }))
                        {

                            @Html.HiddenFor(m => m.ViewbagGrantTypeId)
                            @Html.HiddenFor(m => m.ProgramId)
                            @Html.HiddenFor(m => m.SubProgramId)
                            @Html.ValidationSummary(true)
                            <fieldset>

                                <div id="printDivNewVal">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-6 form-group">
                                            <h4>
                                                @VdcProvinceNme<br />
                                                @if (UserTypeId == 2)
                                                {
                                                    <span>मुख्यमन्त्री तथा मन्त्रिपरिषदको कार्यालय</span>
                                                }
                                                else
                                                {
                                                    <span>गाँउ/नगर कार्यपालिकाको कार्यालय</span>

                                                }

                                            </h4>
                                        </div>
                                        <table class="table table-bordered" style="width:75%;">
                                            <thead>
                                                <tr>
                                                    <td>क्रस</td>
                                                    <td></td>
                                                    <td>शर्त</td>

                                                </tr>
                                            </thead>
                                            @foreach (var item in Model.ProgramConditionsViewModelList)
                                            {
                                                <tr>
                                                    <td>@sn</td>
                                                    <td>@Html.CheckBox("CBName", item.IsCheck, new { @disabled = "disabled" })</td>
                                                    <td>@item.ConditionsTitle</td>

                                                </tr>
                                                sn++;
                                            }

                                        </table>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 form-group">
                                            <span>
                                                @Html.CheckBoxFor(m => Model.TermsAndCondtions, new { @disabled = "disabled" })
                                                आयोजना/कार्यक्रम प्रस्तावसंग सम्बन्धित माथिका शर्तहरू पुरा भएको व्यहोरा साचो हो भनि घोषणा गर्दछु ।
                                            </span>
                                        </div>

                                    </div>
                                    <div class="row" style="margin-top:5px;">

                                        @if (UserTypeId == 2)
                                        {
                                            <div class="col-md-4 col-sm-12 form-group">
                                                <span>
                                                    प्रमुख सचिवको नाम :
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-4 col-sm-12 form-group">
                                                <span>
                                                   प्रमुख प्रशासकीय अधिकृतको नाम :
                                                </span>
                                            </div>
                                        }


                                        <div class="col-md-4 col-sm-12 form-group">
                                            <span>
                                                हस्ताक्षर:
                                            </span>
                                        </div>

                                        @*<div class="col-md-4 col-sm-12 form-group" style="margin-top:5px;">
                                            <span>
                                                नाम :
                                            </span>
                                        </div>*@
                                        @*<div class="col-md-4 col-sm-12 form-group" style="margin-top:5px;">
                                            <span>
                                                पद :
                                            </span>
                                        </div>*@


                                        <div class="col-md-4 col-sm-12 form-group" style="margin-top:5px;">
                                            <span>
                                                कार्यलयको छापः
                                            </span>
                                        </div>

                                    </div>


                                </div>

                                <div class="row">
                                    <div class="col-md-12 col-sm-12 form-group">
                                        <label>शर्त घोषणाको कागजात</label>
                                        @Html.TextBoxFor(m => Model.ConditionUploadFile, new { type = "file", @required = "required" })

                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.FinalDocumentsUrl))
                                {
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 form-group">
                                            <label>अपलोड गरिएको फाईल</label>
                                            @Model.FinalDocumentsUrl

                                        </div>
                                    </div>

                                }
                                




                                <br />


                                @if (Model.Status == 1 || Model.Status==2)
                                {
                                    <div class="form-group">
                                        <span style="font-weight:bold;font-size:10px;color:#ff6a00;">(शर्त घोषणाको कागजातलाई प्रिन्ट गरेर स्क्यान गरेर अपलोड गर्नुहोस)</span>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-floppy-o">&nbsp;</i> अपलोड गर्नुहोस</button>
                                        @Html.ActionLink("मुख्य सुचिमा जानुहोस", "ListSubProgram", "SubProgramSetup", new { @id = Model.ViewbagGrantTypeId }, new { @class = "btn btn-info btn-sm" })
                                    </div>
                                }
                                else

                                {
                                    <div class="form-group">

                                        <button type="button" class="btn btn-success btn-sm"><i class="fa fa-floppy-o">&nbsp;</i>प्रमाणिकरणको प्रकिया मा छ ।</button>
                                        @Html.ActionLink(" मुख्य सुचिमा जानुहोस", "ListSubProgram", "SubProgramSetup", new { @id = Model.ViewbagGrantTypeId }, new { @class = "btn btn-info btn-sm fa fa-home" })

                                    </div>
                                }


                            </fieldset>
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<script type="text/javascript">

    function callPrint() {
        var divToPrint = document.getElementById('printDivNewVal');

        var popupWin = window.open('', '_blank', 'width=300,height=400,location=no,left=200px');
        popupWin.document.open();
        popupWin.document.write('<html><body onload="window.print()">' + divToPrint.innerHTML + '</html>');
        popupWin.document.close();
    };

</script>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="~/Scripts/toastr.min.js"></script>
<script type="text/javascript">

    $(function () {
        var a = '@TempData["RequestGrantNotifications"]';
        if (a != '') {
            toastr.success(a, '');
        }
        else {

        }


    });
</script>