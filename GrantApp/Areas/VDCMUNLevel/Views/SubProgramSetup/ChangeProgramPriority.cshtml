@model GrantApp.Models.SubProgramMaster

@{
    ViewBag.Title = "ChangeProgramPriority";
    Layout = "~/Areas/VDCMUNLevel/Views/Shared/_VDCMUNLayout.cshtml";
}
<link href="~/Content/toastr.min.css" rel="stylesheet" />
<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">आयोजना/कार्यक्रमको नाम : @Model.SubProgramTitle</h1>
            <h5>प्राथमिकीरण नंम्बर : @Model.ProgramPirority</h5>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <span style="background-color:#eadfdf;">@ViewBag.ErrorMessage</span>
                        }
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("ChangeProgramPriority", "SubProgramSetup", FormMethod.Post,
new { enctype = "multipart/form-data", @id = "GrantFormID" }))
                        {
                            @Html.HiddenFor(m => m.SubProgramId)
                            @Html.HiddenFor(m => m.ViewbagGrantTypeId)
                            @*@Html.HiddenFor(m => m.ViewBagCurrentOfficeType)
                                @Html.HiddenFor(m => m.ViewBagCurrentLoginUserUserTypeId)*@
                            @Html.ValidationSummary(true)
                            <fieldset>
                                <div class="row">

                                    <div class="col-md-4 col-sm-4 form-group">
                                        <label>आयोजनाको प्राथमिकीकरण</label>
                                        @Html.DropDownListFor(m => m.ProgramPirority, GrantApp.Areas.Admin.FunctionClass.GetProgramPriorityDD(), new { @id = "ppId", @class = "form-control form-control sm", @required = "required", @onChange = "GetProgramListByMainSectionId()" })

                                    </div>
                                </div>
                                <div class="form-group">

                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-floppy-o">&nbsp;</i> सुरक्छित गर्नुहोस</button>
                                    @Html.ActionLink("मुख्य सुचिमा जानुहोस", "ListSubProgram", "SubProgramSetup", new { @id = Model.ViewbagGrantTypeId }, new { @class = "btn btn-info btn-sm" })

                                </div>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery.validate.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.js">
</script>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="~/Scripts/toastr.min.js"></script>
<script type="text/javascript">

    $(function () {
        var a = '@TempData["PriorityMessage"]';
        if (a != '') {
            toastr.success(a, '');
        }
        else {

        }

    });

</script>

