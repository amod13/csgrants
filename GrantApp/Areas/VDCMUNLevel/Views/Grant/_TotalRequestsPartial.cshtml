@model GrantApp.Models.NewProgramInitiation

<div class="modal-header">
    <h5 class="modal-title" id="requestFileModalLabel">
        आगामी आ.व. मा पेश गर्न सकिने आयोजना (जम्मा संख्या बाँकी बढीमा): @CommontUtilities.MaxAllowedThisyear(Model.OfficeId, Model.GrantType)
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>


<div class="modal-body">

    <section>
        <div class="container-fluid">
        

            <header>
                <h1 class="h3 display"> </h1>
            </header>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">

                            <h2>आगामी आ.व. को लागि @GrantApp.Areas.Admin.FunctionClass.GetGrantTypeNameById(Model.GrantType) तर्फ पेश गरिने आयोजना वा कार्यक्रम संख्या पुन शंशोधन गर्नुहोस् ।</h2>

                        </div>
                        <div class="card-body">

                            <form action="@Url.Action("TotalRequests", "Grant")" method="post">
                                <div class="form-group">
                                    @Html.HiddenFor(m => m.GrantType)
                                    @Html.DropDownListFor(m => m.TotalAppliedProject, ViewBag.SubProgramList as SelectList, "Select", new { @id = "ddlSubProgram", @class = "form-control form-control sm", @required = "required" })




                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-floppy-o">&nbsp;</i> आ.व. २०८३/८४ को लागि पेश गरिने आयोजना संख्या पुन संशोधन गर्नुहोस् </button>

                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

















