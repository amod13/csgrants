<style>
    .striped-container {
        font-weight: bold;
        font-size: 13px;
        color: #ff6a00;
        width: fit-content;
    }

        .striped-container div:nth-child(odd) {
            background-color: #ffe5cc;
            padding: 10px;
        }

        .striped-container div:nth-child(even) {
            background-color: #ffffff;
            padding: 10px;
        }

    .input-field {
        width: 100%;
        padding: 5px;
        margin-top: 5px;
    }
</style>

<section>
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">
                अधुरा अपुरा आयोजना वा कार्यक्रमहरुको विवरण
            </h1>
        </header>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-body">
                        <div class="card-header">
                            अधुरा अपुरा आयोजना वा कार्यक्रमहरुको लागि रकम माग गर्नुहोस ।
                        </div>
                        <div class="table-responsive m_table">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>क्रम</th>
                                        <th>आ.व.</th>
                                        <th>प्रकार</th>
                                        <th>मुलभुत क्षेत्र</th>
                                        <th>कोड</th>
                                        <th>शिर्षक</th>
                                        <th>कुल लागत</th>
                                        <th>समय अवधि</th>
                                        <th>विवरण</th>


                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.GetNotCompletedProgramListByOfficeIdVMList)
                                    {

                                        <tr>
                                            <td>@i</td>
                                            <td>@item.PhaseStatus</td>
                                            <td>@item.GrantTypeName</td>

                                            <td>@item.SubProgramId</td>
                                            <td>@item.SubProgramId</td>
                                            <td>@item.SubProgramTitle</td>
                                            <td>@item.TotalBudget</td>
                                            <td>@item.TimeDurationYear</td>
                                            <td>@Html.ActionLink(" ", "ReportViewDetailById", new { @id = item.SubProgramId, @id1 = item.GrantTypeName }, new { @class = "edits fa fa-eye", data_toggle = "tooltip", data_placement = "top", @title = "विवरण हेर्नुहोस" })</td>
                                        </tr>
                                        ++i;
                                    }


                                </tbody>
                            </table>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


