@model GrantApp.Models.ViewRequestGrantAmountModel

@{
    ViewBag.Title = "ViewDetailGrantRequestAmount";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">अनुदान माग रकम विवरण</li>
        </ul>
    </div>
</div>


<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h2 class="h3 display">
                कार्यलयको नाम:
                @GrantApp.Areas.Admin.FunctionClass.GetOfficeNameByOfficeId(Model.OfficeId)
                &nbsp;&nbsp;&nbsp;(@GrantApp.Areas.Admin.FunctionClass.GetProvinceDistrictVDCMUNByOfficeID(Model.OfficeId))
            </h2>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">

                        <h4 style="color:#0991f3;">
                            आयोजना/कार्यक्रमको विवरण
                        </h4>
                    </div>

                    <div class="card-body">
                        <div class="row">

                            <div class="col-lg-4 col-md-3 form-group"><b>आयोजना/कार्यक्रमको नाम:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.SubProgramTitle</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>कूल लागत:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.TotalBudget</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>अवधि (वर्ष):</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.TimeDurationYear</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>माग रकम (प्रथम वर्ष):</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.BudgetForFirstYear</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>माग रकम (दोस्रो वर्ष):</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.BudgetForSecondYear</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>माग रकम (तेस्रो वर्ष):</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.BudgetForThirdYear</div>



                            <div class="col-lg-4 col-md-3 form-group"><b>प्रदेश वा स्थानिय तहले व्यहोर्ने रकम:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.AmountProvinceVdc</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>सहकारी तथा अन्य गैर सरकारीले व्यहोर्ने रकम:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.NGOINGOAmount</div>

                            <div class="clearfix"></div>

                        </div>
                        <hr />

                        <div class="card-header d-flex align-items-center">

                            <h4 style="color:#0991f3;">
                                अनुदान माग रकमको विवरण
                            </h4>
                        </div>

                        @if (Model.ProgramPhaseNumber == 2)
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-3 form-group"><b>अनुदान माग गरिएको रकम:</b></div>
                                <div class="col-lg-8 col-md-9 form-group">@Model.AmountSecond</div>

                                <div class="col-lg-4 col-md-3 form-group"><b>अनुमोदित रकम :</b></div>
                                <div class="col-lg-8 col-md-9 form-group">@GrantApp.Areas.Admin.FunctionClass.GetGrantedAmountApprovedByAdmin(Model.SubProgramId, Model.ProgramPhaseNumber)</div>
                            </div>

                        }
                        else if (Model.ProgramPhaseNumber == 3)
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-3 form-group"><b>अनुदान माग गरिएको रकम:</b></div>
                                <div class="col-lg-8 col-md-9 form-group">@Model.AmountSecond</div>

                                <div class="col-lg-4 col-md-3 form-group"><b>अनुमोदित रकम :</b></div>
                                <div class="col-lg-8 col-md-9 form-group">@GrantApp.Areas.Admin.FunctionClass.GetGrantedAmountApprovedByAdmin(Model.SubProgramId, Model.ProgramPhaseNumber)</div>
                            </div>
                        }




                        @using (Html.BeginForm("ApprovedRequestGrantAmount", "Reports", FormMethod.Post,
new { enctype = "multipart/form-data" }))
                        {

                            @Html.HiddenFor(m => m.OfficeId)
                            @Html.HiddenFor(m => m.SubProgramId)
                            @Html.HiddenFor(m=>m.ViewBagFiscalYearId)
                            @Html.ValidationSummary(true)

                            <fieldset>
                                <div class="row">
                                    <div class="col-md-4 col-sm-6 form-group">
                                        <label>अनुमोदित रकम</label>
                                        @Html.TextBoxFor(m => m.GrantedAmountByAdmin, new { @id = "TotalBudgetSecond", @class = "form-control form-control sm", @required = "required" })
                                        @Html.ValidationMessageFor(m => m.GrantedAmountByAdmin)
                                    </div>

                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-floppy-o">&nbsp;</i>पेश गर्नुहोस</button>


                                    @if (ViewBag.ProgressReportSearchId == 1)
                                    {

                                        @Html.ActionLink("मुख्य सूचि", "SearchGrantAmountRequestProvinceWise", "Reports", null, new { @class = "btn btn-danger btn-sm" })


                                    }
                                    else
                                    {

                                        @Html.ActionLink("मुख्य सूचि", "DetailsSearchGrantRequestAmount", "Reports", null, new { @class = "btn btn-danger btn-sm" })


                                    }


                                </div>
                            </fieldset>
                        }


                        <div class="row">
                            <div class="form-group">


                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


