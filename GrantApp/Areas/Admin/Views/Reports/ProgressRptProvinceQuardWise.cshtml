@model GrantApp.Models.ReportModel

@{
    ViewBag.Title = "ComplementryIndex";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">प्रतिवेदनहरू</li>
        </ul>
    </div>
</div>
<section>
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">आयोजना/कार्यक्रमहरूको प्रगति विवरण-प्रदेश अनुसार</h1>
        </header>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">

                        <h4><input type="button" id="btnExport" value="Export" /></h4>

                    </div>
                    <div class="card-body">

                        @using (Ajax.BeginForm("ProgressRptProvinceQuardWise", "Reports", new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "DetailsReportsID",
                            LoadingElementId = "loader"
                        }))
                        {
                            <fieldset>
                                <div class="row">
                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>आर्थिक वर्ष</label>
                                        @Html.DropDownListFor(m => m.ProgramPhaseNumber, GrantApp.Areas.Admin.FunctionClass.GetFiscalYearListDD(), new { @class = "form-control form-control sm", @id = "dll_fyid" })

                                    </div>

                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>चौमासिक</label>
                                        @Html.DropDownListFor(m => m.QuirdId, CommontUtilities.ProgressReportDurationDD(), new { @class = "form-control form-control sm", @id = "dll_quardId" })

                                    </div>

                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>प्रदेश</label>
                                        @Html.DropDownListFor(m => m.ProvinceIdSearch, GrantApp.Areas.Admin.FunctionClass.GetProvincesDD(), new { @class = "form-control form-control sm", @id = "dll_province", @onchange = "GetDistrictListDD()" })

                                    </div>

                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>अनुदान प्रकार</label>
                                        @Html.DropDownListFor(m => m.GrantTypeIdSearch, GrantApp.Areas.Admin.FunctionClass.GetGrantType(), new { @class = "form-control form-control sm", @id = "GrantTypeDDDivId", @onchange = "ShowHideSearchDiv()" })

                                    </div>
                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>पठाउने/नपठाउने</label>
                                        @Html.DropDownListFor(m => m.SubmitedOrNotSubmited, GrantApp.CommontUtilities.SubmitedOrNotSubmited(), new { @class = "form-control form-control sm" })

                                    </div>

                                </div>
                                
                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o">&nbsp;</i>खोज्नुहोस</button>
                            </fieldset>
                        }
                        <div id="loader" class=" aletr" style="display:none">
                            Loading...
                            <img src="~/AdminResources/img/ajax-loader.gif" />
                        </div>

                        <div id="DetailsReportsID"></div>

                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script type="text/javascript">

    function ShowHideSearchDiv() {
        var value = $("#GrantTypeDDDivId option:selected").val();

        if (value == 1) {
            $("#GrantTypeIDOne").show();
            $("#GrantTypeIdTwo").hide();
        }
        else {
            $("#GrantTypeIDOne").hide();
            $("#GrantTypeIdTwo").show();
        }
    };
</script>




<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="~/AdminResources/js/table2excel.js"></script>
<script type="text/javascript">
    var kk = $.noConflict();
    kk(function () {
        kk("#btnExport").click(function () {
            kk("#DetailsReportsID").table2excel({
                filename: "dtlReportsAmountProvince.xls"
            });
        });
    });
</script>