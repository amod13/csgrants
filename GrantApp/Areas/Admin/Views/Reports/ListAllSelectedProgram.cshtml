@model GrantApp.Models.ReportModel

@{
    ViewBag.Title = "ListAllSelectedProgram";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/toastr.min.css" rel="stylesheet" />
<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">आयोजना/कार्यक्रम प्रस्तवित/छनौट विवरण</li>
        </ul>
    </div>
</div>
<section>
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">
                (आ.व.२०७९/८०) नयाँ विशेष/समपुरक आयोजना/कार्यक्रम प्रस्तवित/छनौट विवरण
            </h1>
        </header>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">

                        <div class="card-body">
                            <h1 class="h3 display">
                                (आ.व.२०७९/८०) प्रस्तवित/छनौट विवरण
                            </h1>
                            <div class="table-responsive m_table bg-light">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>आ.व.</th>
                                            <th>प्रदेश-१ (प्रस्तवित/छनौट)</th>
                                            <th>प्रदेश-२ (प्रस्तवित/छनौट)</th>
                                            <th>प्रदेश-३ (प्रस्तवित/छनौट)</th>
                                            <th>प्रदेश-४ (प्रस्तवित/छनौट)</th>
                                            <th>प्रदेश-५ (प्रस्तवित/छनौट)</th>
                                            <th>प्रदेश-६ (प्रस्तवित/छनौट)</th>
                                            <th>प्रदेश-७ (प्रस्तवित/छनौट)</th>
                                            <th>जम्मा (प्रस्तवित/छनौट)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.SelectedListProvinceWiseViewModelList)
                                        {
                                            <tr>
                                                <td>@item.PhaseTitle</td>
                                                <td>@item.ProOneTotal /@item.ProOneSelected</td>
                                                <td>@item.ProTwoTotal /@item.ProTwoSelected</td>
                                                <td>@item.ProThreeTotal /@item.ProThreeSelected</td>
                                                <td>@item.ProFourTotal /@item.ProFourSelected</td>
                                                <td>@item.ProFiveTotal /@item.ProFiveSelected</td>
                                                <td>@item.ProSixTotal /@item.ProSixSelected</td>
                                                <td>@item.ProSevenTotal /@item.ProSevenSelected</td>
                                                <td>@item.TotalProgram /@item.TotalSelected</td>
                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>

                            <hr />

                            <h1 class="h3 display">
                                (आ.व.२०७९/८०) प्रस्तवित/स्वीकृत विवरण
                            </h1>
                            <div class="table-responsive m_table bg-light">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>आ.व.</th>
                                            <th>प्रदेश-१ (प्रस्तवित/स्वीकृत)</th>
                                            <th>प्रदेश-२ (प्रस्तवित/स्वीकृत)</th>
                                            <th>प्रदेश-३ (प्रस्तवित/स्वीकृत)</th>
                                            <th>प्रदेश-४ (प्रस्तवित/स्वीकृत)</th>
                                            <th>प्रदेश-५ (प्रस्तवित/स्वीकृत)</th>
                                            <th>प्रदेश-६ (प्रस्तवित/स्वीकृत)</th>
                                            <th>प्रदेश-७ (प्रस्तवित/स्वीकृत)</th>
                                            <th>जम्मा (प्रस्तवित/स्वीकृत)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.SelectedApprovedListProvinceWiseViewModelList)
                                        {
                                            <tr>
                                                <td>@item.PhaseTitle</td>
                                                <td>@item.ProOneTotal /@item.ProOneSelected</td>
                                                <td>@item.ProTwoTotal /@item.ProTwoSelected</td>
                                                <td>@item.ProThreeTotal /@item.ProThreeSelected</td>
                                                <td>@item.ProFourTotal /@item.ProFourSelected</td>
                                                <td>@item.ProFiveTotal /@item.ProFiveSelected</td>
                                                <td>@item.ProSixTotal /@item.ProSixSelected</td>
                                                <td>@item.ProSevenTotal /@item.ProSevenSelected</td>
                                                <td>@item.TotalProgram /@item.TotalSelected</td>
                                            </tr>

                                        }

                                    </tbody>
                                </table>
                            </div>


                            @using (Html.BeginForm("UpdateFinalApprovedStatus", "Reports", FormMethod.Post,
new { enctype = "multipart/form-data", @id = "GrantFormID" }))
                            {
                                if (Model.TotalSelectedProgramCount > 0)
                                {
                                    <button type="submit" class="btn btn-primary" onclick="UpdateProgramSelectedToApproved()"><i class="fa fa-floppy-o">&nbsp;</i>छनौट भएका आयोजना/कार्यक्रमलाई स्वीकृत गर्नुहोस</button>
                                    @*<button type="button" class="btn btn-primary" onclick="UpdateProgramSelectedToApproved()"><i class="fa fa-floppy-o">&nbsp;</i>छनौट भएका आयोजना/कार्यक्रमलाई स्वीकृत गर्नुहोस</button>*@


                                }
                            }
                        </div>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="~/Scripts/toastr.min.js"></script>
<script type="text/javascript">

    $(function () {
        var a = '@TempData["Notifications"]';
        if (a != '') {
            toastr.success(a, '');
        }
        else {

        }

    });



</script>


