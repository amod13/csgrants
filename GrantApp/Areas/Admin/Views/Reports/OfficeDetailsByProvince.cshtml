@model GrantApp.Models.OfficeDetailsForAdminViewModel

@{
    ViewBag.Title = "ComplementryIndex";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}
<style>

    .GreenCL {
        color: #09e409;
    }

    .RedCL {
        color: red;
    }
</style>

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">प्रतिवेदनहरू</li>
        </ul>
    </div>
</div>
<section>
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">कार्यालय विवरण -प्रदेश अनुसार</h1>
        </header>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">

                        <h4><input type="button" id="btnExport" value="Export" /></h4>

                    </div>
                    <div class="card-body">

                        @using (Ajax.BeginForm("OfficeDetailsByProvince", "Reports", new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "NotSubmitedListDivId",
                            LoadingElementId = "loader"
                        }))
                        {
                            <fieldset>
                                @*<div class="row">
                                        <div class="col-md-3 col-sm-6 form-group">
                                            <label>आयोजना/कार्यक्रमको कोड</label>
                                            @Html.TextBoxFor(m => m.ProgramCodeNumber, new { @class = "form-control form-control sm", @id = "dll_ProgramCodeNumber", placeholder = "12345" })
                                        </div>
                                    </div>*@
                                <hr />
                                <div class="row">
                                    @*<div class="col-md-3 col-sm-6 form-group">
                                            <label>आर्थिक वर्ष</label>
                                            @Html.DropDownListFor(m => m.ProgramPhaseNumber, GrantApp.Areas.Admin.FunctionClass.GetProgramPhaseListDD(), new { @class = "form-control form-control sm", @id = "dll_phaseNumber" })

                                        </div>*@
                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>प्रदेश</label>
                                        @Html.DropDownListFor(m => m.ProvinceIdSearch, GrantApp.Areas.Admin.FunctionClass.GetProvincesDDWithoutSelect(), new { @class = "form-control form-control sm", @id = "dll_phaseNumber" })

                                    </div>
                                    @*<div class="col-md-3 col-sm-6 form-group">
                                            <label>अनुदान प्रकार</label>
                                            @Html.DropDownListFor(m => m.GrantTypeId, GrantApp.Areas.Admin.FunctionClass.GetGrantTypeWithDefaultValue(), new { @class = "form-control form-control sm", @id = "dll_phaseNumber" })

                                        </div>*@

                                </div>

                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o">&nbsp;</i>खोज्नुहोस</button>
                            </fieldset>
                        }

                        <div id="loader" class="aletr" style="display:none">
                            Loading...
                            <img src="~/AdminResources/img/ajax-loader.gif" />
                        </div>


                        <div class="table-responsive m_table" id="NotSubmitedListDivId">
                            <table class="table table-hover" id="NotSubmitedListTable">
                                <thead>
                                    <tr>
                                        <th>क्रम</th>
                                        <th>प्रदेश</th>
                                        <th>मुख्य मन्त्रिको नाम</th>
                                        <th>मुख्य मन्त्रिको ईमेल</th>
                                        <th>मुख्य मन्त्रिको मोबाईल नं.</th>
                                        <th>उपाध्यक्षको नाम</th>
                                        <th>उपाध्यक्षको ईमेल</th>
                                        <th>उपाध्यक्षको मोबाईल नं.</th>
                                        <th>प्रमुख सचिवको नाम</th>
                                        <th>प्रमुख सचिवको ईमेल</th>
                                        <th>प्रमुख सचिवको मोबाईल नं.</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.OfficeDetailsForAdminViewModelList)
                                    {


                                        <tr>
                                            <th scope="row">@i</th>
                                            <td>@item.OfficeName</td>
                                            <td>@item.ContactPerson</td>
                                            <td>@item.ContactPersonPost</td>
                                            <th>@item.MobileNumber</th>
                                            <td>@item.UpMayerName</td>
                                            <td>@item.UpMayeraEmail</td>
                                            <td>@item.UpMayerMobile</td>
                                            <td>@item.ContactPersonAccount</td>
                                            <td>@item.ContactPersonEmailAccount</td>
                                            <td>@item.ContactPersonMobileAccount</td>

                                        </tr>
                                        ++i;
                                    }


                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="~/AdminResources/js/table2excel.js"></script>
<script type="text/javascript">
    var kk = $.noConflict();
    kk(function () {
        kk("#btnExport").click(function () {
            kk("#NotSubmitedListTable").table2excel({
                filename: "NotSubmitedList.xls"
            });
        });
    });
</script>


