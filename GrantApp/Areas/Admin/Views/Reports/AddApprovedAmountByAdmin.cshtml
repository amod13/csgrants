@model GrantApp.Areas.Admin.Models.DashboardModel

@{
    ViewBag.Title = "AddApprovedAmountByAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">अनुमोदित रकम</li>
        </ul>
    </div>
</div>
<style>
    .btn-toolbar {
        display: inline !important;
    }

    .fake_fieldset {
        border: 2px groove ButtonFace;
        border-top-width: 0;
        margin-left: 2px;
        margin-right: 2px;
        padding: .35em .625em .75em;
        margin-top: 1em;
        position: relative;
    }

    .fake_legend {
        margin-top: -1em;
    }

        .fake_legend.test1::before {
            position: absolute;
            top: 0;
            left: -1px;
            border-top: 2px groove ButtonFace;
            content: " ";
            width: 0.5em;
        }

        .fake_legend.test1::after {
            position: absolute;
            top: 0;
            right: -1px;
            border-top: 2px groove ButtonFace;
            content: " ";
            width: 40%;
        }

        .fake_legend text1 span {
            color: red;
            font-weight: bold;
        }
</style>
<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">

                        <h4 style="color:#0991f3;">
                            आयोजना/कार्यक्रमको विवरण
                        </h4>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-4 col-md-3 form-group"><b>कार्यलयको नाम:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.ObjGetSubprogramDetailByIdViewModel.OfficeName</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>आयोजना/कार्यक्रमको नाम:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.ObjGetSubprogramDetailByIdViewModel.SubProgramTitle</div>
                            <div class="col-lg-4 col-md-3 form-group"><b>समय अवधि:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.ObjGetSubprogramDetailByIdViewModel.TimeDurationYear</div>

                            <div class="col-lg-4 col-md-3 form-group"><b>रकम माग-प्रथम वर्ष:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.ObjGetSubprogramDetailByIdViewModel.BudgetForFirstYear</div>

                            <div class="col-lg-4 col-md-3 form-group"><b>रकम माग-दोस्रो वर्ष:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.ObjGetSubprogramDetailByIdViewModel.BudgetForSecondYear</div>

                            <div class="col-lg-4 col-md-3 form-group"><b>रकम माग-तेस्रो वर्ष:</b></div>
                            <div class="col-lg-8 col-md-9 form-group">@Model.ObjGetSubprogramDetailByIdViewModel.BudgetForThirdYear</div>

                        </div>
                    </div>

                    <div class="clearfix"></div>


                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-lg-4 col-md-3 form-group" style="color:red; font-size:12px;">@ViewBag.ErrorMessage</div>

                            </div>
                        </div>
                    }


                    <div class="row">
                        <div class="col-lg-12">

                            @using (Html.BeginForm("AddApprovedAmountByAdmin", "Reports", FormMethod.Post,
new { enctype = "multipart/form-data" }))
                            {
                                @Html.HiddenFor(m => m.ObjGetSubprogramDetailByIdViewModel.SubProgramId)
                                @Html.HiddenFor(m => m.ObjGetSubprogramDetailByIdViewModel.PhaseTitle)
                                @Html.HiddenFor(m => m.ObjGetSubprogramDetailByIdViewModel.GrantTypeName)
                                @Html.ValidationSummary(true)

                                <fieldset>
                                    <div class="fake_fieldset test1">
                                        <div class="fake_legend test1">मूल्याकंन:</div>
                                        <div class="row">
                                            @*<div class="col-md-4 col-sm-12 form-group">
                                                    <label>प्रमाणित प्रक्रिया</label>
                                                    @Html.DropDownListFor(m => m.ObjMakeApprovedFinalListViewModel.ApprovedStatus, GrantApp.Areas.Admin.FunctionClass.GetApprovedStatusListDD(), new { @id = "dll_MainSectionId", @class = "form-control form-control sm", @required = "required" })

                                                </div>*@

                                            <div class="col-md-4 col-sm-6 form-group">
                                                <label>अनुमोदित रकम</label>
                                                @Html.TextBoxFor(m => m.ObjGetSubprogramDetailByIdViewModel.ApprovedAmountByAdmin, new { @class = "form-control form-control sm", required = "required", @id = "ApprovedAmount" })
                                                @Html.ValidationMessageFor(m => m.ObjGetSubprogramDetailByIdViewModel.ApprovedAmountByAdmin)
                                            </div>

                                            @*<div class="col-md-12 col-sm-6 form-group">
                                                    <label>कैफियत/विवरण</label>
                                                    @Html.TextBoxFor(m => m.CancelledRemarks, new { @class = "form-control form-control sm", @required = "required", @id = "statusComment" })
                                                    @Html.ValidationMessageFor(m => m.CancelledRemarks)
                                                </div>*@


                                        </div>

                                        <div class="form-group">


                                            <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-floppy-o">&nbsp;</i>रकम राख्नुहोस</button>



                                        </div>
                                    </div>
                                </fieldset>
                            }
                        </div>
                    </div>
                </div>





            </div>
        </div>
    </div>

</section>