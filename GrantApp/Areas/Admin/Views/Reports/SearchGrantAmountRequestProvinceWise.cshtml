@model GrantApp.Models.ReportModel

@{
    ViewBag.Title = "SearchGrantAmountRequestProvinceWise";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}
<style>
    .wrapper1, .wrapper2 {
        width: 1171px;
        overflow-x: scroll;
        overflow-y: hidden;
    }

    .wrapper1 {
        height: 30px;
    }

    .wrapper2 {
        min-height: 100px;
    }

    .div1 {
        width: 1500px;
        height: 100px;
    }

    .div2 {
        width: 1500px;
        /*height: auto;*/
        /*overflow: hidden;*/
    }

    .cd {
        overflow: hidden;
    }
</style>

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">प्रतिवेदनहरू</li>
        </ul>
    </div>
</div>
<section>
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">अनुदान माग रकम विवरण-प्रदेश अनुसार</h1>
        </header>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">

                        <h4><input type="button" id="btnExport" value="Export" /></h4>

                    </div>
                    <div class="card-body">

                        @using (Ajax.BeginForm("SearchGrantAmountRequestProvinceWise", "Reports", new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "DetailsReportsID",
                            LoadingElementId = "loader"
                        }))
                        {
                            <fieldset>
                                <div class="row">


                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>आर्थिक वर्ष</label>
                                        @Html.DropDownListFor(m => m.ProgramPhaseNumber, GrantApp.Areas.Admin.FunctionClass.GetFiscalYearListDD(), new { @class = "form-control form-control sm", @id = "dll_phaseNumber" })

                                    </div>

                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>प्रदेश</label>
                                        @Html.DropDownListFor(m => m.ProvinceIdSearch, GrantApp.Areas.Admin.FunctionClass.GetProvincesDD(), new { @class = "form-control form-control sm", @id = "dll_province" })

                                    </div>

                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>अनुदान प्रकार</label>
                                        @Html.DropDownListFor(m => m.GrantTypeIdSearch, GrantApp.Areas.Admin.FunctionClass.GetGrantType(), new { @class = "form-control form-control sm", @id = "GrantTypeDDDivId", @onchange = "ShowHideSearchDiv()" })

                                    </div>
                                    @*<div class="col-md-3 col-sm-6 form-group">
                                            <label>कार्यक्रमको संख्या</label>
                                            @Html.DropDownListFor(m => m.ProgramCountIdSearch, GrantApp.CommontUtilities.CountVariableListInReportDD(), new { @class = "form-control form-control sm" })

                                        </div>*@

                                </div>

                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o">&nbsp;</i>खोज्नुहोस</button>
                            </fieldset>
                        }
                        <div id="loader" class=" aletr" style="display:none">
                            Loading...
                            <img src="~/AdminResources/img/ajax-loader.gif" />
                        </div>

                        <div id="DetailsReportsID">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="~/AdminResources/js/table2excel.js"></script>
<script type="text/javascript">
    var kk = $.noConflict();
    kk(function () {
        kk("#btnExport").click(function () {
            kk("#DetailsReportsID").table2excel({
                filename: "dtlReportsAmountProvince.xls"
            });
        });
    });
</script>

