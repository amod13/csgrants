            data: { id: value },
            dataType: "json",
            type: "POST",
            error: function () {
                GetVDCMUNDDByDistrictId
                alert("An error occurred.");
            },
            success: function (data) {
                var items = "";
                $.each(data, function (i, item) {
                    items += "<option value=\"" + item.Value + "\">" + item.Text + "</option>";
                });

                $("#dll_vdcmun").html(items);
            }
        })
    };

    function ShowHideSearchDiv() {
        var value = $("#GrantTypeDDDivId option:selected").val();

        if (value == 1) {
            $("#GrantTypeIDOne").show();
            $("#GrantTypeIdTwo").hide();
        }
        else {
            $("#GrantTypeIDOne").hide();
            $("#GrantTypeIdTwo").show();
        }
    };



</script>

