@model GrantApp.Models.ComplementryReportViewModel

@{
    ViewBag.Title = "ComplementryIndex";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}
<style>

    .GreenCL {
        color: #09e409;
    }

    .RedCL {
        color: red;
    }
</style>

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">प्रतिवेदनहरू</li>
        </ul>
    </div>
</div>
<section>
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">विवरण भरेको तर बुझाउन बाँकि -स्थानीय तह अनुसार</h1>
        </header>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">

                        <h4><input type="button" id="btnExport" value="Export" /></h4>

                    </div>
                    <div class="card-body">

                        @using (Ajax.BeginForm("NotSubmitedListForLocalLevel", "Reports", new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "NotSubmitedListDivId",
                            LoadingElementId = "loader"
                        }))
                        {
                            <fieldset>
                                @*<div class="row">
                                        <div class="col-md-3 col-sm-6 form-group">
                                            <label>आयोजना/कार्यक्रमको कोड</label>
                                            @Html.TextBoxFor(m => m.ProgramCodeNumber, new { @class = "form-control form-control sm", @id = "dll_ProgramCodeNumber", placeholder = "12345" })
                                        </div>
                                    </div>*@
                                <hr />
                                <div class="row">
                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>आर्थिक वर्ष</label>
                                        @Html.DropDownListFor(m => m.ProgramPhaseNumber, GrantApp.Areas.Admin.FunctionClass.GetProgramPhaseListDD(), new { @class = "form-control form-control sm", @id = "dll_phaseNumber" })

                                    </div>
                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>प्रदेश</label>
                                        @Html.DropDownListFor(m => m.ProvinceIDSearch, GrantApp.Areas.Admin.FunctionClass.GetProvincesDDWithoutSelect(), new { @class = "form-control form-control sm", @id = "dll_province", @onchange = "GetDistrictListDD()" })

                                    </div>
                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>जिल्ला</label>
                                        @Html.DropDownListFor(m => m.DistrictIdSearch, GrantApp.Areas.Admin.FunctionClass.GetDistrictByStateIdDD(Model.ProvinceIDSearch), new { @class = "form-control form-control sm", @id = "dll_district", @onchange = "GetVDCMUNListDD()" })

                                    </div>
                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>गापा/नपा</label>
                                        @Html.DropDownListFor(model => model.VdcMunIdSearch, GrantApp.Areas.Admin.FunctionClass.GetRuralMunicipalitybyDistrictDDDefault(Model.DistrictIdSearch.ToString()), new { @class = "form-control form-control-sm", id = "dll_vdcmun" })

                                    </div>


                                    <div class="col-md-3 col-sm-6 form-group">
                                        <label>अनुदान प्रकार</label>
                                        @Html.DropDownListFor(m => m.GrantTypeId, GrantApp.Areas.Admin.FunctionClass.GetGrantTypeWithDefaultValue(), new { @class = "form-control form-control sm", @id = "dll_phaseNumber" })

                                    </div>

                                </div>

                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o">&nbsp;</i>खोज्नुहोस</button>
                            </fieldset>
                        }

                        <div id="loader" class="aletr" style="display:none">
                            Loading...
                            <img src="~/AdminResources/img/ajax-loader.gif" />
                        </div>


                        <div class="table-responsive m_table" id="NotSubmitedListDivId">
                            <table class="table table-hover" id="NotSubmitedListTable">
                                <thead>
                                    <tr>
                                        <th>क्रम</th>
                                        <th>आयोजनाको नाम</th>
                                        <th>प्रदेश</th>
                                        <th>कूल लागत</th>
                                        <th>सम्बन्धित तहले व्यहोर्ने</th>
                                        <th>अनुदान माग गरिएको रकम</th>
                                        <th>आयोजनाको अवधि</th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.ComplementryReportViewModelList)
                                    {

                                        decimal TotalBudgetAmt = item.TotalBudget;
                                        decimal TotalAmountByVDCMUN = item.AmountProvinceVdc;
                                        decimal RequestAmt = item.TotalBudget - item.AmountProvinceVdc;
                                        <tr>
                                            <th scope="row">@i</th>
                                            <th>@item.SubProgramTitle</th>
                                            <td>@item.ProvinceName</td>
                                            <td>@item.TotalBudget</td>
                                            <td>@item.AmountProvinceVdc</td>
                                            <td></td>
                                            <td>@item.TimeDurationYear</td>
                                            <td>
                                                @Html.ActionLink(" ", "ViewDeatilsList", new { @id = item.SubProgramId, @id1 = item.GrantTypeId }, new { @class = "edits fa fa-eye" })
                                            </td>


                                        </tr>
                                        ++i;
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>


<script type="text/javascript">
    function GetDistrictListDD() {
        var value = $("#dll_province option:selected").val();
        $.ajax({
            url: "@Url.Action("GetDistrictDDByProvinceIdWithSelectValue", "AjaxRequest", new { @area="admin"})",
            data: { id: value },
            dataType: "json",
            type: "POST",
            error: function () {
                alert("An error occurred.");
            },
            success: function (data) {
                var items = "";
                $.each(data, function (i, item) {
                    items += "<option value=\"" + item.Value + "\">" + item.Text + "</option>";
                });

                $("#dll_district").html(items);
            }
        })
    };

    function GetVDCMUNListDD() {
        var value = $("#dll_district option:selected").val();
        $.ajax({
            @*url: "@Url.Action("GetVDCMUNDDByDistrictId", "AjaxRequest", new { @area="admin"})",*@
            url: "@Url.Action("GetVDCMUNDDByDistrictIdWithDefaultValue", "AjaxRequest", new { @area="admin"})",
            data: { id: value },
            dataType: "json",
            type: "POST",
            error: function () {
                GetVDCMUNDDByDistrictId
                alert("An error occurred.");
            },
            success: function (data) {
                var items = "";
                $.each(data, function (i, item) {
                    items += "<option value=\"" + item.Value + "\">" + item.Text + "</option>";
                });

                $("#dll_vdcmun").html(items);
            }
        })
    };

   

</script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="~/AdminResources/js/table2excel.js"></script>
