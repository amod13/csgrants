@model GrantApp.Models.ReportModel

@{
    ViewBag.Title = "PointsFromAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/toastr.min.css" rel="stylesheet" />

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">मूल्यांकन</li>
        </ul>
    </div>
</div>

<section>
    <div class="container-fluid">
        <!-- Page Header-->
        @Html.Partial("_SubprogramBasicDetails", Model)

        <div class="row">
            <div class="col-lg-12">

                <div class="card">

                    <div class="card-header d-flex align-items-center">

                        @if (ViewBag.Message != null)
                        {
                            <span style="background-color:#eadfdf;">@ViewBag.Message</span>
                        }
                    </div>
                    <div class="card-body">


                        @using (Html.BeginForm("ComplementryPointsFromAdmin", "Reports", FormMethod.Post,
new { enctype = "multipart/form-data" }))
                        {

                            @Html.HiddenFor(m => m.ObjApplicationPointsFromAdminViewModel.SubprogramId)
                            @Html.HiddenFor(m=>m.GrantTypeIdSearch)

                            @Html.ValidationSummary(true)

                            <fieldset>

                                <div class="row">


                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label>आयोजनाको पन्ध्रैा योजनाको राष्ट्रिय प्राथमिकता र राष्ट्रिय उदेश्यसँग सामञ्जस्यता</label>
                                        @Html.DropDownListFor(model => model.ObjApplicationPointsFromAdminViewModel.VariableId11, GrantApp.Areas.Admin.FunctionClass.GetPointDetailsToUpdateFromAdminDD(2, 11), new { @class = "form-control form-control-sm", id = "dll_var11" })

                                    </div>
                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label>सम्बन्धित प्रदेश वा स्थानीय तहको जनसंख्या</label>
                                        @Html.DropDownListFor(model => model.ObjApplicationPointsFromAdminViewModel.VariableId12, GrantApp.Areas.Admin.FunctionClass.GetPointDetailsToUpdateFromAdminDD(2, 12), new { @class = "form-control form-control-sm", id = "dll_var12" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label>सम्बन्धित प्रदेश वा स्थानीय तहको क्षेत्रफल</label>
                                        @Html.DropDownListFor(model => model.ObjApplicationPointsFromAdminViewModel.VariableId13, GrantApp.Areas.Admin.FunctionClass.GetPointDetailsToUpdateFromAdminDD(2, 13), new { @class = "form-control form-control-sm", id = "dll_var13" })

                                    </div>
                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label>सम्बन्धित प्रदेश वा स्थानीय तहको पूर्वाधार विकासको अवस्था</label>
                                        @Html.DropDownListFor(model => model.ObjApplicationPointsFromAdminViewModel.VariableId14, GrantApp.Areas.Admin.FunctionClass.GetPointDetailsToUpdateFromAdminDD(2, 14), new { @class = "form-control form-control-sm", id = "dll_var14" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label>आयोजना पूर्व तयारीको अवस्था</label>
                                        @Html.DropDownListFor(model => model.ObjApplicationPointsFromAdminViewModel.VariableId16, GrantApp.Areas.Admin.FunctionClass.GetPointDetailsToUpdateFromAdminDD(2, 16), new { @class = "form-control form-control-sm", id = "dll_var16" })
                                    </div>

                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label>आयोजना कार्यान्वयनमा स्थानीय श्रोत साधनको उपयोग</label>
                                        @Html.DropDownListFor(model => model.ObjApplicationPointsFromAdminViewModel.VariableId18, GrantApp.Areas.Admin.FunctionClass.GetPointDetailsToUpdateFromAdminDD(2, 18), new { @class = "form-control form-control-sm", id = "dll_var18" })
                                    </div>
                                    <div class="col-md-6 col-sm-12 form-group">
                                        <label>आयोजनामा प्रदेश वा स्थानीय तहको लगानीको हिस्सा</label>
                                        @Html.DropDownListFor(model => model.ObjApplicationPointsFromAdminViewModel.VariableId19, GrantApp.Areas.Admin.FunctionClass.GetPointDetailsToUpdateFromAdminDD(2, 19), new { @class = "form-control form-control-sm", id = "dll_var19" })
                                    </div>
                                </div>
                                <div class="row">

                                    <div class="col-md-3 col-sm-12 form-group">
                                        <label>जम्मा प्राप्त नंम्बर</label>
                                        @Html.TextBoxFor(model => model.ObjApplicationPointsFromAdminViewModel.TotalPoints, new { @class = "form-control form-control-sm", id = "TotalNumberOb" })

                                    </div>
                                </div>


                                <button type="button" class="btn btn-info" onclick="ShowTotalNubmer()"><i class="fa fa-floppy-o">&nbsp;</i>जम्मा नंम्बर देखाउनुहोस</button>

                                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o">&nbsp;</i>सुरक्छित गर्नुहोस</button>
                                <button type="button" class="btn btn-primary" onclick="goBack()"><i class="fa fa-floppy-o">&nbsp;</i>मुख्य मेनु</button>

                            </fieldset>
                        }




                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/toastr.min.js"></script>
<script type="text/javascript">

    $(function () {
        var a = '@TempData["Notifications"]';
        if (a != '') {
            toastr.success(a, '');
        }
        else {

        }


    });
</script>

<script type="text/javascript">
    function ShowTotalNubmer() {
        var dll_var11Ans = $("#dll_var11").val();
        var dll_var12Ans = $("#dll_var12").val();
        var dll_var13Ans = $("#dll_var13").val();
        var dll_var16Ans = $("#dll_var16").val();
        var dll_var18Ans = $("#dll_var18").val();
        var dll_var19Ans = $("#dll_var19").val();
        var TotalPoints = parseInt(dll_var11Ans) + parseInt(dll_var12Ans) + parseInt(dll_var13Ans) + parseInt(dll_var16Ans) + parseInt(dll_var18Ans) + parseInt(dll_var19Ans);
        $("#TotalNumberOb").val(TotalPoints);

    }
    function goBack() {
        history.go(-1);
    }


</script>
