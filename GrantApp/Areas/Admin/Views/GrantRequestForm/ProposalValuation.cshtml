@model GrantApp.Models.SubProgramMaster

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Program</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">प्रस्ताव मूल्यांकन गर्ने आधारहरू</h1>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        @*<h4>form</h4>*@
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("ProposalValuation", "GrantRequestForm", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(m => Model.GrantTypeId)
                            @Html.HiddenFor(m => Model.SubProgramId)
                            @Html.ValidationSummary(true)
                            <fieldset>


                                <div class="row">

                                    @for (int i = 0; i < Model.ValuationBasisModelList.Count; i++)
                                    {
                                        string cls = "css" + Model.ValuationBasisModelList[i].VariableId;
                                        string clssystemcss = "#f7e9e9";
                                        if (Model.ValuationBasisModelList[i].VariableBasis != null)
                                        {
                                            if (Model.ValuationBasisModelList[i].IsSystemGenerated)
                                            {
                                                clssystemcss = "#c1d9f5";
                                            }
                                            <div class="col-md-12 col-sm-6 form-group" style="background-color:@clssystemcss">
                                                <label>@Html.DisplayFor(m => Model.ValuationBasisModelList[i].VariableBasis)</label>
                                                @if (Model.ValuationBasisModelList[i].IsSystemGenerated)
                                                {
                                                    <span>(System)</span>
                                                }
                                                else
                                                {
                                                    <span>(User)</span>
                                                }
                                            </div>
                                        }
                                        <div class="col-md-1 col-sm-6 form-group">
                                            <label>
                                                @Html.CheckBoxFor(m => Model.ValuationBasisModelList[i].IsChecked, new { @class = cls })
                                                @Html.DisplayFor(m => Model.ValuationBasisModelList[i].SerialNep)
                                            </label>
                                        </div>

                                        <div class="col-md-11 col-sm-6 form-group">
                                            @Html.HiddenFor(m => Model.ValuationBasisModelList[i].VariableId)
                                            @Html.HiddenFor(m => Model.ValuationBasisModelList[i].VariableDetailid)
                                            @Html.DisplayFor(m => Model.ValuationBasisModelList[i].VariableDetailBasis, new { @class = "form-control form-control sm" })
                                        </div>
                                    }
                                    <div class="clearfix"></div>
                                </div>

                                <div class="form-group">
                                    @*<button type="submit" class="btn btn-secondary"><i class="fa fa-angle-double-left">&nbsp;</i> Back</button> &nbsp; &nbsp; &nbsp;*@
                                    <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-floppy-o">&nbsp;</i>पेश गर्नुहोस्</button>

                                </div>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


