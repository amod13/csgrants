@model GrantApp.Areas.Admin.Models.DashboardModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .btn-group-sm > .btn, .btn-sm {
        padding: 5px 10px;
        font-size: 12px;
        line-height: 1.5;
        border-radius: 3px;
    }

    .btn-success {
        color: #fff;
        background-color: #5cb85c;
        border-color: #4cae4c;
    }
</style>
<style>
   .dashboard-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

    .dashboard-table th {
        background-color: #2c3e50;
        color: white;
        padding: 10px;
        text-align: center;
    }

    .dashboard-table td {
        padding: 8px;
        border: 1px solid #ddd;
    }

    .group-new {
        background-color: #e3f2fd;
        font-weight: 600;
    }

    .group-old {
        background-color: #fdecea;
        font-weight: 600;
    }

    .text-right {
        text-align: right;
    }

    .dashboard-table tr:hover {
        background-color: #f5f5f5;
    }

</style>
<section class="dashboard-counts section-padding">

    <div class="publicInfo" style="display:flex;justify-content:flex-end">
        <div>
            <label style="margin-top:16px;padding-right:10px;padding-left:20px"> आर्थिक वर्ष:</label>
        </div>
        <div>
            @Html.DropDownListFor(m => m.ProgramPhaseNumber, GrantApp.Areas.Admin.FunctionClass.GetProgramPhaseListDD(), new { @class = "form-control form-control sm", @id = "dll_phaseNumber", @style = "width:180px;margin-top:12px" })
            @*@Html.TextBox("txtProgramID", null, new { @style = "width:180px;margin-top:12px", @id = "txtProgramID", @placeholder = "eg:1098", @class = "form-control" })*@
        </div>
        <div class="col-md-1" style="margin-left:1px;margin-top:13px">
            <button type="button" id="btn_SearchFiscalyearWise" class="btn btn-sm btn-success" value='SearchProgram' data-toggle="modal" data-target="#exampleModal123456" onclick="ShowProgramPhaseWiseDetails()">खोज्नुहोस</button>
        </div>

    </div>

    <div id="FiscalYearWiseDetails">


        <div class="container-fluid">
            <div class="alert alert-info">
                @Model.ProgramPhaseNumberStr को लागि प्रस्तावित आयोजना/कार्यक्रमको विवरण
            </div>
            <div class="row">

                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>कार्यक्रम प्रकार</th>
                            <th>जम्मा</th>
                            <th>प्रदेशबाट माग संख्या</th>
                            <th>स्था.तहबाट माग  संख्या</th>
                            <th>प्रदेश माग रकम</th>
                            <th>स्था.तह माग रकम</th>
                            <th>स्वीकृत प्रदेश</th>
                            <th>स्वीकृत स्था.तह</th>
                        </tr>
                    </thead>
                    <tbody>

                        <!-- नयाँ आयोजना -->
                        <tr class="group-new">
                            <td>नयाँ आयोजना/कार्यक्रम</td>
                            <td class="text-right">@GrantApp.CommontUtilities.GetTotalProgramCountPhaseWise(Model.ProgramPhaseNumber)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWise(2, Model.ProgramPhaseNumber)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWise(4, Model.ProgramPhaseNumber)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramBudgetOfficeTypeWise(2, Model.ProgramPhaseNumber)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramBudgetOfficeTypeWise(4, Model.ProgramPhaseNumber)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalProgramApprovedOfficeWise(2, Model.ProgramPhaseNumber)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalProgramApprovedOfficeWise(4, Model.ProgramPhaseNumber)</td>
                        </tr>

                        <!-- विशेष अनुदान -->
                        <tr class="group-new">
                            <td>विशेष अनुदान</td>
                            <td class="text-right">@GrantApp.CommontUtilities.GetTotalProgramCountPhaseAndGrantTypeWise(Model.ProgramPhaseNumber, 1)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWise(2, Model.ProgramPhaseNumber, 1)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWise(4, Model.ProgramPhaseNumber, 1)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramBudgetOfficeTypeWise(2, Model.ProgramPhaseNumber, 1)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramBudgetOfficeTypeWise(4, Model.ProgramPhaseNumber, 1)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalProgramApprovedOfficeGrantTypeWise(2, Model.ProgramPhaseNumber, 1)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalProgramApprovedOfficeGrantTypeWise(4, Model.ProgramPhaseNumber, 1)</td>
                        </tr>

                        <!-- समपुरक अनुदान -->
                        <tr class="group-new">
                            <td>समपुरक अनुदान</td>
                            <td class="text-right">@GrantApp.CommontUtilities.GetTotalProgramCountPhaseAndGrantTypeWise(Model.ProgramPhaseNumber, 2)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWise(2, Model.ProgramPhaseNumber, 2)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWise(4, Model.ProgramPhaseNumber, 2)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramBudgetOfficeTypeWise(2, Model.ProgramPhaseNumber, 2)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramBudgetOfficeTypeWise(4, Model.ProgramPhaseNumber, 2)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalProgramApprovedOfficeGrantTypeWise(2, Model.ProgramPhaseNumber, 2)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalProgramApprovedOfficeGrantTypeWise(4, Model.ProgramPhaseNumber, 2)</td>
                        </tr>

                        <!-- क्रमागत आयोजना -->
                        <tr class="group-old">
                            <td>क्रमागत आयोजना/कार्यक्रम (विषेश)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.DashboradCountTotalRequestGrantAmount(1, 0, Model.RGAFiscalYearId)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWiseRGA(2, Model.ProgramPhaseNumber, Model.RGAFiscalYearId, 1)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWiseRGA(4, Model.ProgramPhaseNumber, Model.RGAFiscalYearId, 1)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalRequestAmountOfficeTypeWiseRGA(2, Model.ProgramPhaseNumber, Model.RGAFiscalYearId, 1)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalRequestAmountOfficeTypeWiseRGA(4, Model.ProgramPhaseNumber, Model.RGAFiscalYearId, 1)</td>
                            <td class="text-right">-</td>
                            <td class="text-right">-</td>
                        </tr>
                        <!-- क्रमागत आयोजना -->
                        <tr class="group-old">
                            <td>क्रमागत आयोजना/कार्यक्रम (समपुरक)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.DashboradCountTotalRequestGrantAmount(2, 0, Model.RGAFiscalYearId)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWiseRGA(2, Model.ProgramPhaseNumber, Model.RGAFiscalYearId, 2)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWiseRGA(4, Model.ProgramPhaseNumber, Model.RGAFiscalYearId, 2)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalRequestAmountOfficeTypeWiseRGA(2, Model.ProgramPhaseNumber, Model.RGAFiscalYearId, 2)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalRequestAmountOfficeTypeWiseRGA(4, Model.ProgramPhaseNumber, Model.RGAFiscalYearId, 2)</td>
                            <td class="text-right">-</td>
                            <td class="text-right">-</td>
                        </tr>
                        <!-- क्रमागत आयोजना -->
                        <tr class="group-old">
                            <td>कुल क्रमागत आयोजना/कार्यक्रम</td>
                            <td class="text-right">@GrantApp.CommontUtilities.DashboradCountTotalRequestGrantAmount(0, 0, Model.RGAFiscalYearId)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWiseRGA(2, 4, Model.RGAFiscalYearId)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalNewProgramOfficeTypeWiseRGA(4, 4, Model.RGAFiscalYearId)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalRequestAmountOfficeTypeWiseRGA(2, 4, Model.RGAFiscalYearId)</td>
                            <td class="text-right">@GrantApp.CommontUtilities.TotalRequestAmountOfficeTypeWiseRGA(4, 4, Model.RGAFiscalYearId)</td>
                            <td class="text-right">-</td>
                            <td class="text-right">-</td>
                        </tr>

                    </tbody>
                </table>


            </div>




        </div>
    </div>



</section>
<style>
    .info-box {
        box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
        border-radius: .25rem;
        padding: .5rem;
        min-height: 80px;
        background: #fff;
    }

    .dashboard-counts .count-number {
        font-size: 1em;
    }
</style>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>


<script>
    function ShowProgramPhaseWiseDetails() {
        var PhaseNumber = $("#dll_phaseNumber").val();

        $.ajax({
                type: 'POST',
            url: '@Url.Action("ShowProgramPhaseWiseDetails", "AdminHome")?id=' + PhaseNumber,
            success: function (result) {

                    $('#FiscalYearWiseDetails').html(result);


                }
            });

    }
</script>




