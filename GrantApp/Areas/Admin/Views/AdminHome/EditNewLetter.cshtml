@model GrantApp.Areas.Admin.Models.LetterDetails

@{
    ViewBag.Title = "AddNewLetter";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Letter</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">

                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h3 display"></h3>
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <span style="background-color:#eadfdf;">@ViewBag.ErrorMessage</span>
                        }
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("EditNewLetter", "AdminHome", FormMethod.Post,
new { enctype = "multipart/form-data", @id = "GrantFormEdit" }))
                        {
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => m.LetterDetailId)
                            @Html.HiddenFor(m => m.UploadDoc)
                            <fieldset>
                                @Html.Partial("_CreateEditLetter")
                            </fieldset>

                            <div class="form-group">

                                <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-floppy-o">&nbsp;</i> सुरक्छित गर्नुहोस</button>
                                @Html.ActionLink(" मुख्य सुचिमा जानुहोस", "ListLetter", "AdminHome", new { @class = "btn btn-info btn-sm fa fa-home" })
                            </div>

                        }

                    </div>
                </div>


            </div>
        </div>
    </div>
</section>

