@model GrantApp.Areas.Admin.Models.DashboardModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
 <link href="~/Content/toastr.min.css" rel="stylesheet" />
<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Change Password</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">Change Password</h1>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        @*<h4>form</h4>*@
                    </div>
                    <div class="card-body">

                        @using (Html.BeginForm("ChangePassword", "AdminHome", FormMethod.Post,
new { enctype = "multipart/form-data" }))
                        {

                            @Html.ValidationSummary(true)
                            <fieldset>
                                <div class="row">
                                    <div class="col-md-4 col-sm-6 form-group">
                                        <label>प्रयोगकर्ताको नाम (Username)</label>
                                        @Html.TextBoxFor(m => m.SectionName, new { @class = "form-control form-control sm", @required = "required" })

                                    </div>
                                </div>
                                <div class="row">
                                    <label>प्रयोगकर्ताको पासवर्ड पूर्वनिर्धारित Vdcmun@321 हुन्छ ।</label>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o">&nbsp;</i>Change Password</button>
                                </div>




                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="~/Scripts/toastr.min.js"></script>
<script type="text/javascript">

    $(function () {
        var a = '@TempData["Notifications"]';
        if (a != '') {
            toastr.success(a, '');
        }
        else {

        }


    });
</script>