@using GrantApp.Models
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login and FAQ</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            height: 100vh;
        }

        .container {
            display: flex;
            width: 100%;
            height: 100vh;
        }

        .login-form {
            flex: 1;
            padding: 20px;
            background-color: #f4f4f4;
        }

        .faq-section {
            flex: 3;
            padding: 40px;
            background-color: #fff;
            overflow-y: auto; /* Enable vertical scroll when content overflows */
        }

        /* Style the login form */
        .login-form form {
            max-width: 400px;
            margin: 0 auto;
        }

        .login-form label {
            display: block;
            margin-bottom: 8px;
        }

        .login-form input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        .login-form button {
            background-color: #4caf50;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            width: 100%;
        }

        /* Style the FAQ section */
        .faq-section h2 {
            color: #333;
            margin-bottom: 20px;
        }

        .faq-section ul {
            list-style-type: none;
            padding: 0;
        }

        .faq-section li {
            margin-bottom: 20px;
            text-align: justify;
        }

        .faq-section .question {
            cursor: pointer;
            color: #0066cc;
            font-weight: bold;
        }

        .faq-section .answer {
            display: none;
            margin-top: 5px;
        }

        login-page .logo, .register-page .logo {
            font-size: 2em;
            font-weight: 500;
        }

        .text-uppercase {
            text-transform: uppercase !important;
        }

        .OfficeName {
            margin-bottom: 15px;
            line-height: 30px;
        }

        .text-center {
            text-align: center !important;
        }

        OfficeName small {
            color: #ff0000 !important;
            margin-bottom: 5px !important;
            line-height: 0.9em !important;
            display: block !important;
            font-size: 16px !important;
            margin-top: 10px !important;
        }
    </style>
</head>
<body>

    <div class="container">


        <div class="faq-section">
            <h2>
                सङ्घीय समपूरक तथा विशेष अनुदान सम्बन्धी बाराम्बार
                सोधिने प्रश्नहरु
            </h2>
            <ul>
                @*<li>
                        <div class="question">What is this website about?</div>
                        <div class="answer">This website is about...</div>
                    </li>
                    <li>
                        <div class="question">How can I contact support?</div>
                        <div class="answer">You can contact support by...</div>
                    </li>*@
                <li>
                    <div class="question">1. सङ्घीय समपूरक तथा विशेष अनुदान भनेको के हो ?</div>
                    <div class="answer">
                        नेपालको संविधानको धारा ६० मा व्यवस्था भएबमोजिम नेपाल
                        सरकारले प्रदेश वा स्थानीय तहलाई सङ्घीय संचित कोषबाट प्रदान गर्ने
                        विभिन्न चार किसिमका वित्तीय हस्तान्तरण (वित्तीय समानीकरण
                        अनुदान, सशर्त अनुदान, विशेष अनुदान तथा समपूरक अनुदान) मध्ये
                        राष्ट्रिय योजना आयोगले व्यवस्थापन गर्ने दुईप्रकारका अनुदानहरु हुन् ।
                    </div>
                </li>
                <li>
                   
                </li>
                <li>
                2. कस्ता आयोजनालाई सङ्घीय समपूरक अनुदान प्रदान गरिन्छ?
                
                </li>
                <li>
                    नेपाल सरकारले प्रदेश तथा स्थानीय तहलाई पूर्वाधार विकास सम्बन्धी
                    कुनै योजना कार्यान्वयन गर्न समपूरक अनुदान प्रदान गर्दछ । यस
                    अन्तर्गत कृषि उपजको भण्डारण गृह तथा शीतगृह, स्थानीय
                    कच्चापदार्थमा आधारित उत्पादनलाई ब्रान्डिंग तथा उपयोग गरी मूल्य
                    अभिवृद्धि गर्ने प्रकृतिका कृषि, पशुपालन सम्बन्धी लघु, साना, मझौला
                    उद्यमहरू (MSMEs), खानेपानी आयोजना, ग्रामीण क्षेत्रमा एकीकृत बस्ती
                    विकास, नमूना आवास, जोखिमयुक्त बस्ती स्थानान्तरण सिंचाई, नदि
                    नियन्त्रण तथा तटबन्धन, वन तथा वातावरण संरक्षण, जलवायु परिवर्तन
                    न्यूनीकरण, प्रदुषण नियन्त्रण, फोहोरमैला प्रशोधन एवम् व्यवस्थापन,
                    ल्याण्डफिल साईट, इन्सिनरेसन प्लान्ट, प्रदेश विश्वविद्यालय, विद्यालय
                    भवन निर्माण, पदमार्ग, पार्क निर्माण, ट्रेलमार्ग, होमस्टे, ब्रेड एंड
                    ब्रेकफास्ट (B&amp;B), पर्यटकीय पदमार्गमा रहेका चिया/कफी घर, मझौला

                    तथा ठूला पुल, सडक, कृषि सडक, जलमार्ग, लोकमार्ग, सौर्य, वायु,
                    जैविक, वैकल्पिक उर्जा, प्रशारण लाईन, विद्युत उत्पादन, स्वास्थ्य चौकी,
                    अस्पताल, स्थानीय तहको कार्यालय र वडा कार्यालय, विपद् पूर्वतयारी,
                    पुन: स्थापना, पुन: निर्माण, नव: निर्माण, क्षतिग्रस्त सार्वजनिक पूर्वाधार
                    निर्माण तथा नेपाल सरकारको नीति तथा कार्यक्रम र बजेटमा संघ, प्रदेश
                    र स्थानीय तहबीच सहकार्य र संयुक्त लगानीमा कार्यान्वयन गर्ने गरी
                    तोकिएका आयोजना/कार्यक्रममा समपूरक अनुदान प्रदान गरिन्छ ।
                </li>
                <li style="font-weight:bold;">3. कस्ता आयोजनालाई सङ्घीय विशेष अनुदान प्रदान गरिन्छ?</li>
                <li>
                    नेपाल सरकारले शिक्षा, स्वास्थ्य, खानेपानी जस्ता आधारभूत सेवाको
                    विकास र आपूर्ति गर्ने, अन्तरतह सन्तुलित विकास गर्ने, विभेदमा परेको
                    वर्ग वा समुदायको उत्थान वा विकास गर्ने उद्देश्य राखी प्रदेश वा स्थानीय
                    तहबाट संचालन गरिने कुनै खास योजनाको लागि विशेष अनुदान प्रदान
                    गर्दछ । यसअन्तर्गत न्यून साक्षरता भएका क्षेत्रको शैक्षिक विकास, बाल
                    मृत्युदर, मातृ मृत्युदर भएका क्षेत्रहरुमा प्रदान गरिने आधारभूत स्वास्थ्य
                    सेवा, दुर्गम तथा आर्थिक रुपले पिछडिएको क्षेत्रलाई लक्षित खानेपानी
                    आपूर्ति सम्बन्धी आयोजना/कार्यक्रम, अल्पसंख्यक, सीमान्तकृत वर्ग एवम्
                    दुर्गम तथा पिछडिएको क्षेत्र वा आर्थिक, सामाजिक वा अन्य कुनै प्रकारले
                    विभेदमा परेका वर्ग वा समुदायको उत्थान वा विकास, प्रदेश वा स्थानीय
                    तहबीच भौतिक तथा मानवीय विकासको दृष्टिले सन्तुलन कायम गर्न
                    संचालन हुने आयोजना/कार्यक्रम, खाद्यान्नको उत्पादनमा न्यूनता भएका
                    क्षेत्रमा खाद्य सुरक्षा सुनिश्चितता गर्ने आयोजना/कार्यक्रम, आधुनिक

                    प्रविधिको प्रयोग गरी फोहोरमैला व्यवस्थापन, विपद् जोखिम
                    न्यूनीकरण, विपद् प्रभावित क्षेत्रमा पुनर्स्थापना, पुनर्निर्माण वा
                    नवनिर्माण तथा समयसमयमा राष्ट्रिय योजना आयोगले तोकेका अन्य
                    प्राथमिकताका क्षेत्रहरुमा विशेष अनुदान प्रदान गरिन्छ ।
                </li>
                <li style="font-weight:bold;">
                    4. सङ्घीय समपूरक तथा विशेष अनुदान सम्बन्धी कानूनी व्यवस्था के के
                    रहेका छन्?
                </li>
                <li>
                    अन्तरसरकारी वित्त व्यवस्थापन ऐन, २०७४ तथा मिति
                    २०७७/१०/५ मा नेपाल सरकारबाट स्वीकृत भएका समपूरक अनुदान
                    सम्बन्धी (तेस्रो संशोधन) कार्यविधि, २०७७ एवम् विशेष अनुदान
                    सम्बन्धी (तेस्रो संशोधन) कार्यविधि, २०७७ सङ्घीय समपूरक तथा
                    विशेष अनुदान सम्बन्धी कानूनी व्यवस्था रहेका छन् ।
                </li>
                <li style="font-weight:bold;">
                    5. सङ्घीय समपूरक अनुदान तथा सङ्घीय विशेष अनुदान अन्तर्गत
                    सञ्‍चालन गरिने आयोजना/कार्यक्रमका लागि प्रस्ताव आव्हान सम्बन्धी
                    सूचना कहिले प्रकाशन हुन्छ?
                </li>
                <li>
                    सङ्घीय समपूरक अनुदान तथा सङ्घीय विशेष अनुदान अन्तर्गत
                    सञ्‍चालन गरिने आयोजना/कार्यक्रमका लागि प्रस्ताव आव्हान सम्बन्धी
                    सूचना साधारणतया: मङ्सिर मसान्तभित्र गोरखापत्र राष्ट्रिय दैनिकमा
                    प्रकाशित हुन्छ । आ.व. २०८१/८२ का लागि यस्तो सूचना २०८०
                    मङ्सिर ३० गते प्रकाशन भएको छ ।
                </li>
                <li style="font-weight:bold;">6. आयोजना/कार्यक्रम प्रविष्ट गर्ने समयसीमा सम्बन्धी व्यवस्था के रहेको छ ?</li>
                <li>
                    सङ्घीय समपूरक अनुदान तथा सङ्घीय विशेष अनुदान अन्तर्गत
                    सञ्‍चालन गरिने आयोजना/कार्यक्रमका लागि प्रस्ताव पेश गर्ने अवधि
                    पौष १ गते देखि माघ मसान्तसम्म रहेको छ ।
                </li>
                <li style="font-weight:bold;">
                    7. आयोजना/कार्यक्रमका लागि प्रस्ताव पेश कसरी गरिन्छ?
                </li>
                <li>
                    राष्ट्रिय योजना आयोगले सङ्घीय समपूरक तथा विशेष अनुदान
                    व्यवस्थापन सम्बन्धी सम्पूर्ण कार्य विद्युतीय माध्यमबाट मात्रै गर्छ ।
                    यसका लागि सबैभन्दा पहिला www.csgrants.gov.np मा जाने, User
                    ID तथा Password प्रविष्ट गरेर Login गर्ने । आयोजना तथा कार्यक्रम
                    प्रस्ताव अनलाईन प्रणालीमा प्रविष्ट गर्न सम्बन्धित प्रदेश सरकार तथा
                    स्थानीय तहका लागि लग-इन गर्ने विवरणहरु आयोगबाट यस अगाडि नै
                    उपलब्ध गराईसकिएको छ ।
                </li>
                <li style="font-weight:bold;">8. Login Credentials (User ID तथा Password) हराएमा के गर्ने?</li>
                <li>
                    आयोजना तथा कार्यक्रम प्रस्ताव अनलाईन प्रणालीमा प्रविष्ट गर्न
                    सम्बन्धित प्रदेश सरकार तथा स्थानीय तहका लागि लग-इन गर्ने
                    विवरणहरु (Login Credentials) आयोगबाट यस अगाडि नै उपलब्ध
                    गराईसकिएकोमा कुनै कारणवश उपलब्ध हुन नसकेको खण्डमा
                    आयोगको ईमेल ठेगाना (csgrants@npc.gov.np) मा आधिकारिक
                    पत्राचारमार्फत पुन: प्राप्त (Reset) गर्न सकिनेछ ।
                </li>
                <li style="font-weight:bold;">
                    9. समपूरक तथा विशेष अनुदान सम्बन्धी थप जानकारी चाहिएमा कहाँ
                    सम्पर्क गर्ने ?
                </li>
                <li>
                    थप जानकारीका लागि कार्यालय समयमा आयोगको टेलिफोन नं.: ०१-
                    ४२११११३, ०१-४२११०१४ र इमेल मार्फत
                    (csgrants@npc.gov.np) सम्पर्क गर्न सकिनेछ ।
                </li>
                <li style="font-weight:bold;">
                    10. सङ्घीय समपूरक तथा विशेष अनुदान अन्तर्गत कतिवटा
                    आयोजनाको लागि प्रस्ताव पेश गर्न सकिन्छ?
                </li>
                <li>
                    प्रदेश सरकारको हकमा समपूरक अनुदानतर्फ क्रमागत सहित अधिकतम
                    १५ वटा, विशेष अनुदानतर्फ क्रमागत सहित १० वटा तथा स्थानीय
                    तहको हकमा अधिकतम २ वटासम्म नयाँ आयोजनाहरू प्रस्तावको
                    रुपमा पेश गर्न सकिनेछ र त्यसरी प्रस्ताव गर्दा प्राथमिकीकरण समेत
                    निर्धारण गरी पेश गर्नुपर्नेछ।
                </li>
                <li style="font-weight:bold;">
                    11. सङ्घीय समपूरक अनुदान माग गर्दा आयोजना प्रस्तावको लागि
                    तयार/पेश गर्नु पर्ने विवरण तथा कागजातहरु के के रहेका छन्?
                </li>
                <li>
                    1) आयोजनाको आर्थिक, सामाजिक, वातावरणीय र लैङ्गिक समानता
                    र सामाजिक समावेशीकरणका पक्षहरुको विश्लेषण, आयोजनाको
                    दिगोपन सुनिश्चित हुने आधार सहित कूल लागत अनुमान खुल्ने
                    विस्तृत परियोजना प्रतिवेदन (DPR) वा विस्तृत ईन्जिनियरिङ्ग
                    प्रतिवेदन (DER) वा ईन्जिनियरिङ्ग डिजाईन वा ड्रइङ्ग
                    डिजाइन/स्पेशिफिकेशन सहितको विस्तृत प्रतिवेदन
                    2) प्रचलित कानून बमोजिम आयोजना/कार्यक्रमको प्रारम्भिक
                    वातावरणीय परीक्षण वा वातावरणीय प्रभाव मूल्याङ्कन प्रतिवेदन
                    3) प्रदेशको हकमा मुख्यमन्त्री तथा मन्त्रिपरिषद्को कार्यालयबाट
                    सङ्घीय समपूरक अनुदान माग गर्ने सम्बन्धमा (कार्यान्वयन गर्ने

                    निकायको नाम सहित) गरेको निर्णयको प्रमाणित प्रतिलिपि र
                    पुष्ट्याई
                    4) प्रदेशको हकमा सम्बन्धित प्रदेश नीति तथा योजना आयोगसँगको
                    समन्वयमा प्रस्तावित आयोजना/कार्यक्रमहरुको प्राथमिकीकरण
                    गरेको विवरण
                    5) स्थानीय तहको हकमा सम्बन्धित स्थानीय तहको कार्यपालिकाले
                    सङ्घीय समपूरक अनुदान माग गर्ने सम्बन्धमा गरेको निर्णयको
                    प्रमाणित प्रतिलिपि (उपस्थिति सहित)
                </li>
