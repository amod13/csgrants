@using GrantApp.Models
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login and FAQ</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            display: flex;
            height: 100vh;
        }

        .container {
            display: flex;
            width: 100%;
            height: 100vh;
        }

        .login-form {
            flex: 1;
            padding: 20px;
            background-color: #f4f4f4;
        }

        .faq-section {
            flex: 3;
            padding: 40px;
            background-color: #fff;
            overflow-y: auto; /* Enable vertical scroll when content overflows */
        }

        /* Style the login form */
        .login-form form {
            max-width: 400px;
            margin: 0 auto;
        }

        .login-form label {
            display: block;
            margin-bottom: 8px;
        }

        .login-form input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        .login-form button {
            background-color: #4caf50;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            width: 100%;
        }

        /* Style the FAQ section */
        .faq-section h2 {
            color: #333;
            margin-bottom: 20px;
        }

        .faq-section ul {
            list-style-type: none;
            padding: 0;
        }

        .faq-section li {
            margin-bottom: 20px;
            text-align: justify;
        }

        .faq-section .question {
            cursor: pointer;
            color: #0066cc;
            font-weight: bold;
        }

        .faq-section .answer {
            display: none;
            margin-top: 5px;
        }

        login-page .logo, .register-page .logo {
            font-size: 2em;
            font-weight: 500;
        }

        .text-uppercase {
            text-transform: uppercase !important;
        }

        .OfficeName {
            margin-bottom: 15px;
            line-height: 30px;
        }

        .text-center {
            text-align: center !important;
        }

        OfficeName small {
            color: #ff0000 !important;
            margin-bottom: 5px !important;
            line-height: 0.9em !important;
            display: block !important;
            font-size: 16px !important;
            margin-top: 10px !important;
        }

        .blinking-text {
    color: white;
    background-color: red;
    padding: 5px;
    font-weight: bold;
    animation: blink 1s infinite;
  }

  @@keyframes blink {
    50% { opacity: 0; }
  }
        .faq-section {
            margin-top: 20px;
            padding: 15px;
            background: #e3f2fd;
            border-radius: 8px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            height: 100px;
        }

        .card-header {
            font-size: 18px;
            font-weight: bold;
            color: #1565c0;
           
        }

    </style>
</head>
<body>

    <div class="container">


       <div class="faq-section">
            <div class="card-header">
                <span>विशेष/समपूरक अनुदान कार्यक्रम</span><br />
                <span>आर्थिक वर्ष २०८२/८३ का लागि सङ्घीय समपूरक तथा विशेष अनुदानमार्फत आयोजना वा कार्यक्रम प्रस्ताव गर्ने समयसीमा समाप्त भयो। धन्यवाद।</span>
            </div>
        </div>



        <div class="login-form">

            <div class="form-outer text-center d-flex align-items-center login_box">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-inner">
                        <div class="logo text-uppercase">
                            <figure>
                                <img src="~/AdminResources/img/photos/250px-Emblem_of_Nepal.svg.png" height="100px" width="100px" />
                            </figure>

                        </div>

                        <div class="OfficeName">
                            <small>नेपाल सरकार</small><br />
                            <span>राष्ट्रिय योजना आयोग</span><br />
                            सिंहदरवार, काठमाडौ
                            नेपाल
                            <br />
                            <span>विशेष/समपूरक अनुदान कार्यक्रम</span><br />
                     
                            <br />

                        </div>

                        @if ((string)TempData["Notification"] == "DateExpired")
                        {
                            <div style="background-color:#f4e7e7;font-weight:bold;"> आर्थिक वर्ष २०८२/८३ का लागि सङ्घीय समपूरक तथा विशेष अनुदानमार्फत आयोजना वा कार्यक्रम प्रस्ताव गर्ने समयसीमा समाप्त भयो। धन्यवाद।</div>
                        }

                        <form method="get" class="text-left form-validate">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Username", required = "", autofocus = "" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "", autofocus = "" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })


                            </div>


                            <div class="form-group text-center row">
                                <div class="col-md-4 text-left">
                                    <button type="submit" class="btn btn-sm btn-success btn-login"><i class="fa fa-sign-in">&nbsp;</i> LOG IN</button>
                                </div>


                                <div class="col-md-8 text-right">

                                    <div class="btn-user-manual">@Html.ActionLink(" विशेष अनुदान सम्बन्धी कार्यविधि, २०८१", "ViewKaryabidhibisesh2081", "Home", null, new { @class = "fa fa-download", target = "_blank" })</div>

                                </div>

                                <div class="col-md-8 text-right">

                                    <div class="btn-user-manual">@Html.ActionLink(" समपुरक अनुदान सम्बन्धी कार्यविधि, २०८१", "ViewKaryabidhisamapurak2081", "Home", null, new { @class = "fa fa-download", target = "_blank" })</div>

                                </div>
                                <div class="col-md-8 text-right">

                                    <div class="btn-user-manual">@Html.ActionLink(" विशेष,समपूरक साविकको कार्यविधि", "ViewKaryabidhi", "Home", null, new { @class = "fa fa-download", target = "_blank" })</div>

                                </div>

                                <div class="col-md-8 text-right">

                                    @*<div class="btn-user-manual">@Html.ActionLink(" प्रयोगकर्ता पुस्तिका (Mannual)", "DownloadMannual", "Home", null, new { @class = "fa fa-download", target = "_blank" })</div>*@
                                </div>
                                <div class="col-md-4 text-left">
                                </div>

                                <div class="col-md-8 text-right">
                                    <p class="fg_pw">Forgot your password?  <a href="../Account/ForgotPassword">Click Here</a></p>

                                </div>
                            </div>
                        </form>
                        <div class="copyrights text-center">
                            <p style="font-size:12px !important;">ईमेल :csgrants@npc.gov.np &nbsp; फोन : 01-4211113,01-4211014</p>
                            <p style="font-size:11px !important;ss"> Copyright  &copy;नेपाल सरकार, राष्ट्रिय योजना आयोग ,2019-2025 </p>

                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get all question elements
            var questions = document.querySelectorAll('.faq-section .question');

            questions.forEach(function (question) {
                question.addEventListener('click', function () {
                    // Toggle the display of the corresponding answer
                    var answer = question.nextElementSibling;
                    answer.style.display = (answer.style.display === 'none') ? 'block' : 'none';
                });
            });
        });
    </script>
</body>
</html>
